---
// Instagram feed section component for Active Away - Tailwind CSS Version
import { getInstagramPosts } from '../utils/instagram.js';

// Accept homeData as prop (fetched once in index.astro)
interface Props {
  homeData?: any;
}

const { homeData } = Astro.props;

// Fetch Instagram posts
let instagramPosts = [];
try {
  instagramPosts = await getInstagramPosts(6);
  console.log('✅ Fetched', instagramPosts.length, 'Instagram posts');
} catch (error) {
  console.error('❌ Error fetching Instagram posts:', error);
}

const instagramData = {
  title: homeData?.instagram?.title || "Follow Us on Instagram",
  subtitle: homeData?.instagram?.subtitle || "@active.away",
  instagramUrl: "https://www.instagram.com/active.away/",
  posts: instagramPosts
};
---

<section class="w-full bg-white py-12 sm:py-16 lg:py-24">
  <div class="container mx-auto px-4 sm:px-10">
    <!-- Header -->
    <div class="mb-4 sm:mb-5 lg:mb-8 text-center">
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-playfair font-semibold text-gray-900 mb-1 sm:mb-2">
        {instagramData.title}
      </h2>
      <a 
        href={instagramData.instagramUrl} 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-base sm:text-lg font-inter text-[#ad986c] hover:text-[#8a7454] transition-colors inline-flex items-center gap-2"
      >
        {instagramData.subtitle}
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd"/>
        </svg>
      </a>
    </div>

    <!-- Instagram Grid -->
    {instagramPosts.length > 0 ? (
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-2 sm:gap-3 lg:gap-4">
        {instagramData.posts.map((post) => (
          <a 
            href={post.permalink} 
            target="_blank" 
            rel="noopener noreferrer"
            class="relative aspect-square overflow-hidden rounded-lg group"
          >
            <!-- Image/Video Thumbnail -->
            <img 
              src={post.media_type === 'VIDEO' ? post.thumbnail_url : post.media_url}
              alt={post.caption ? post.caption.substring(0, 100) : 'Instagram post'}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
              loading="lazy"
            />
            
            <!-- Hover Overlay -->
            <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
              <div class="text-white text-center p-4">
                <!-- Video Play Icon -->
                {post.media_type === 'VIDEO' && (
                  <svg class="w-12 h-12 mx-auto mb-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                )}
                
                <!-- Caption Preview -->
                {post.caption && (
                  <p class="text-xs sm:text-sm line-clamp-3">
                    {post.caption.substring(0, 80)}...
                  </p>
                )}
              </div>
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-600">Unable to load Instagram posts at this time.</p>
      </div>
    )}
  </div>
</section>

<style>
  .font-inter {
    font-family: 'Inter', sans-serif;
  }
  
  .font-playfair {
    font-family: 'Playfair Display', serif;
  }
</style>

