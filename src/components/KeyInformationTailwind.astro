---
// Key Information section for product pages - Tailwind CSS Version

interface Props {
  productData?: any;
}

const { productData } = Astro.props;

// Extract key information data
const keyInfoData = {
  eyebrow: productData?.keyInformation?.eyebrow || 'KEY INFORMATION',
  heading: productData?.keyInformation?.heading || 'About our Adult Tennis Holidays',
  subtitle: productData?.keyInformation?.subtitle || 'Designed to make adults more skilled and self assured doubles players â€“ Jamie has developed a programme that will give you the knowledge and understanding of a top level doubles player (all pitched at club level players)!',
  infoCards: productData?.keyInformation?.infoCards || []
};

// Icon mapping
const iconMap = {
  'users': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />',
  'ratio': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />',
  'shield': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />',
  'plane': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" />',
  'flight': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />',
  'calendar': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />',
  'heart': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />',
  'star': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />',
  'trophy': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />',
  'check': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />'
};

const hasContent = keyInfoData.infoCards && keyInfoData.infoCards.length > 0;
---

{hasContent && (
  <section class="w-full bg-white py-12 sm:py-16 lg:py-24">
    <div class="container mx-auto max-w-[1400px] px-4 sm:px-10">
      
      <!-- Section Header -->
      <div class="mb-8 sm:mb-12 text-center">
        {keyInfoData.eyebrow && (
          <div class="text-xs sm:text-sm font-inter font-semibold text-gray-600 tracking-[0.2em] uppercase mb-3 sm:mb-4">
            {keyInfoData.eyebrow}
          </div>
        )}
        {keyInfoData.heading && (
          <h2 class="text-2xl sm:text-3xl lg:text-4xl font-playfair font-semibold text-gray-900 mb-4 sm:mb-6">
            {keyInfoData.heading}
          </h2>
        )}
        {keyInfoData.subtitle && (
          <div class="text-base sm:text-lg font-inter text-gray-700 leading-relaxed max-w-4xl mx-auto prose prose-lg">
            <Fragment set:html={keyInfoData.subtitle} />
          </div>
        )}
      </div>
      
      <!-- Info Cards Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 lg:gap-10">
        {keyInfoData.infoCards.map((card) => {
          const iconPath = card.customIconSvg || iconMap[card.icon] || iconMap['star'];
          
          return (
            <div class="flex flex-col items-center text-center group bg-white border-2 border-gray-200 rounded-2xl p-6 sm:p-8 hover:shadow-lg hover:border-gray-300 transition-all duration-300">
              {/* Icon */}
              <div class="w-16 h-16 sm:w-18 sm:h-18 lg:w-20 lg:h-20 bg-[#ad986c] rounded-2xl flex items-center justify-center mb-4 sm:mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg">
                <svg 
                  class="w-8 h-8 sm:w-9 sm:h-9 lg:w-10 lg:h-10 text-white" 
                  fill="none" 
                  viewBox="0 0 24 24" 
                  stroke="currentColor"
                  set:html={iconPath}
                >
                </svg>
              </div>
              
              {/* Heading */}
              <h3 class="text-lg sm:text-xl font-playfair font-semibold text-[#ad986c] mb-2 sm:mb-3">
                {card.heading}
              </h3>
              
              {/* Description */}
              {card.description && (
                <p class="text-base sm:text-lg font-inter text-gray-700 leading-relaxed">
                  {card.description}
                </p>
              )}
            </div>
          );
        })}
      </div>
    </div>
  </section>
)}

<style>
  .font-inter {
    font-family: 'Inter', sans-serif;
  }
  
  .font-playfair {
    font-family: 'Playfair Display', serif;
  }
</style>

