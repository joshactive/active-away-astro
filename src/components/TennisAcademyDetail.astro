<style>
  /* Tab Navigation Styles */
  .page-nav-tab {
    position: relative;
  }
  
  .page-nav-tab.active {
    border-bottom-color: #ad986c;
    color: #ad986c;
  }
  

  /* Scrollbar Hide */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  /* Line Clamp */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Read More Button */
  .read-more-btn,
  [class*="read-more-btn-"] {
    cursor: pointer;
    transition: all 0.2s ease;
    pointer-events: auto;
    position: relative;
    z-index: 10;
  }

  /* Quick Link Description Wrapper - prevent pointer events from bubbling */
  .quick-link-description-wrapper {
    position: relative;
    z-index: 5;
  }

  /* Quick Link Description Transition */
  [class*="quick-link-description-"] {
    transition: all 0.3s ease;
  }
</style>

<script>
  const scrollToSection = (sectionId) => {
    const section = document.getElementById(sectionId);
    if (section) {
      requestAnimationFrame(() => {
        const yOffset = -100;
        const y = section.getBoundingClientRect().top + window.pageYOffset + yOffset;
        window.scrollTo({ top: y, behavior: 'smooth' });
      });
    }
  };

  if (!window.scrollToSection) {
    window.scrollToSection = scrollToSection;
  }

  // Smooth scroll to sections when tabs are clicked
  document.addEventListener('DOMContentLoaded', () => {
    const navTabs = document.querySelectorAll('.page-nav-tab');
    
    navTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const sectionId = tab.dataset.section;
        
        // Update active tab
        navTabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        
        // Scroll to section
        scrollToSection(sectionId);
      });
    });

    // Quick Links "Read More" functionality
    const initReadMore = () => {
      console.log('ðŸ”— [Quick Links] Initializing read more functionality...');
      
      // Find all read more buttons (they have the class "read-more-btn")
      const readMoreButtons = document.querySelectorAll('.read-more-btn');
      console.log('ðŸ”— [Quick Links] Found', readMoreButtons.length, 'read more buttons');
      
      readMoreButtons.forEach((btn, index) => {
        console.log('ðŸ” [Quick Links] Processing button', index);
        
        // Skip if already initialized
        if (btn.hasAttribute('data-initialized')) {
          console.log('â­ï¸ [Quick Links] Button', index, 'already initialized');
          return;
        }
        
        // Find the description paragraph (it's the previous sibling)
        const wrapper = btn.closest('.quick-link-description-wrapper');
        if (!wrapper) {
          console.log('âš ï¸ [Quick Links] Button', index, 'no wrapper found');
          return;
        }
        
        const description = wrapper.querySelector('p[class*="quick-link-description-"]');
        if (!description) {
          console.log('âš ï¸ [Quick Links] Button', index, 'no description found');
          return;
        }
        
        console.log('ðŸ“ [Quick Links] Button', index, 
          'scrollHeight:', description.scrollHeight, 
          'clientHeight:', description.clientHeight,
          'offsetHeight:', description.offsetHeight);
        
        // Check if text is truncated - add a small buffer
        const isTruncated = description.scrollHeight > (description.clientHeight + 2);
        
        console.log('ðŸ“Š [Quick Links] Button', index, 'is truncated:', isTruncated);
        
        if (isTruncated) {
          console.log('âœ… [Quick Links] Showing button', index);
          btn.classList.remove('hidden');
          btn.style.display = 'inline-block';
          btn.setAttribute('data-initialized', 'true');
          
          // Add click handler
          btn.addEventListener('click', function(e) {
            console.log('ðŸ–±ï¸ [Quick Links] Button', index, 'clicked!');
            e.preventDefault();
            e.stopPropagation();
            e.stopImmediatePropagation();
            
            if (description.classList.contains('line-clamp-3')) {
              description.classList.remove('line-clamp-3');
              btn.textContent = 'Read less';
              console.log('ðŸ“– [Quick Links] Expanded', index);
            } else {
              description.classList.add('line-clamp-3');
              btn.textContent = 'Read more';
              console.log('ðŸ“• [Quick Links] Collapsed', index);
            }
            
            return false;
          }, { capture: true });
        } else {
          console.log('âŒ [Quick Links] Button', index, 'text not truncated, hiding');
        }
      });
    };

    // Run multiple times with increasing delays to ensure CSS is loaded
    console.log('â° [Quick Links] Scheduling initialization...');
    setTimeout(() => {
      console.log('â° [Quick Links] First attempt (100ms)');
      initReadMore();
    }, 100);
    
    setTimeout(() => {
      console.log('â° [Quick Links] Second attempt (300ms)');
      initReadMore();
    }, 300);
    
    setTimeout(() => {
      console.log('â° [Quick Links] Third attempt (500ms)');
      initReadMore();
    }, 500);
    
    // Also run after fonts are loaded
    if (document.fonts) {
      document.fonts.ready.then(() => {
        console.log('â° [Quick Links] Fonts loaded, attempting again');
        setTimeout(initReadMore, 100);
      });
    }

    // Update active tab on scroll
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const sectionId = entry.target.id;
            const correspondingTab = document.querySelector(`[data-section="${sectionId}"]`);
            
            if (correspondingTab) {
              navTabs.forEach(t => t.classList.remove('active'));
              correspondingTab.classList.add('active');
            }
          }
        });
      },
      { threshold: 0.3, rootMargin: '-100px 0px -50% 0px' }
    );

    // Observe sections
    const sections = document.querySelectorAll('[id]');
    sections.forEach(section => {
      if (['info', 'coach', 'holidays', 'faqs'].includes(section.id)) {
        observer.observe(section);
      }
    });

    // FAQ Accordion functionality
    const faqButtons = document.querySelectorAll('.faq-accordion-btn');
    
    faqButtons.forEach(button => {
      button.addEventListener('click', () => {
        const content = button.nextElementSibling;
        const chevron = button.querySelector('.faq-chevron');
        const isOpen = !content.classList.contains('hidden');
        
        // Close all FAQs
        document.querySelectorAll('.faq-accordion-content').forEach(c => c.classList.add('hidden'));
        document.querySelectorAll('.faq-chevron').forEach(ch => ch.style.transform = 'rotate(0deg)');
        
        // Open clicked FAQ if it wasn't open
        if (!isOpen) {
          content.classList.remove('hidden');
          chevron.style.transform = 'rotate(180deg)';
        }
      });
    });

    // Gallery lightbox functionality
    const galleryImages = document.querySelectorAll('.gallery-image');
    const galleryLightbox = document.getElementById('galleryLightbox');
    const galleryLightboxImage = document.getElementById('galleryLightboxImage');
    const closeGalleryButton = document.getElementById('closeGalleryButton');
    const prevGalleryButton = document.getElementById('prevGalleryButton');
    const nextGalleryButton = document.getElementById('nextGalleryButton');
    const galleryCounter = document.getElementById('galleryCounter');
    const galleryTotal = document.getElementById('galleryTotal');

    // Build gallery data from gallery images
    let galleryData = [];
    document.querySelectorAll('.gallery-image img').forEach(img => {
      galleryData.push({
        url: img.src,
        alt: img.alt
      });
    });

    let currentGalleryIndex = 0;

    // Show specific image
    const showGalleryImage = (index) => {
      if (galleryData[index]) {
        galleryLightboxImage.src = galleryData[index].url;
        galleryLightboxImage.alt = galleryData[index].alt;
        galleryCounter.textContent = index + 1;
        galleryTotal.textContent = galleryData.length;
        currentGalleryIndex = index;
      }
    };

    // Open gallery lightbox with specific data
    const openGalleryWithData = (data, startIndex = 0) => {
      galleryData = data;
      currentGalleryIndex = startIndex;
      showGalleryImage(startIndex);
      galleryLightbox.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    };

    // Close gallery
    const closeGallery = () => {
      galleryLightbox.classList.add('hidden');
      document.body.style.overflow = '';
    };

    // Navigate to next image
    const nextImage = () => {
      currentGalleryIndex = (currentGalleryIndex + 1) % galleryData.length;
      showGalleryImage(currentGalleryIndex);
    };

    // Navigate to previous image
    const prevImage = () => {
      currentGalleryIndex = (currentGalleryIndex - 1 + galleryData.length) % galleryData.length;
      showGalleryImage(currentGalleryIndex);
    };

    // Gallery image click handlers
    if (galleryImages.length > 0) {
      galleryImages.forEach((galleryImg, index) => {
        galleryImg.addEventListener('click', () => {
          // Rebuild gallery data from all images
          const mainGalleryData = [];
          document.querySelectorAll('.gallery-image img').forEach(img => {
            mainGalleryData.push({
              url: img.src,
              alt: img.alt
            });
          });
          openGalleryWithData(mainGalleryData, index);
        });
      });
    }

    closeGalleryButton?.addEventListener('click', closeGallery);
    prevGalleryButton?.addEventListener('click', prevImage);
    nextGalleryButton?.addEventListener('click', nextImage);

    // Close on background click
    galleryLightbox?.addEventListener('click', (e) => {
      if (e.target === galleryLightbox) {
        closeGallery();
      }
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (galleryLightbox && !galleryLightbox.classList.contains('hidden')) {
        if (e.key === 'Escape') {
          closeGallery();
        } else if (e.key === 'ArrowRight') {
          nextImage();
        } else if (e.key === 'ArrowLeft') {
          prevImage();
        }
      }
    });

    // Touch/Swipe support for mobile
    if (galleryLightboxImage) {
      let touchStartX = 0;
      let touchEndX = 0;
      let touchStartY = 0;
      let touchEndY = 0;
      const minSwipeDistance = 50; // Minimum distance for a swipe in pixels

      galleryLightboxImage.addEventListener('touchstart', (e) => {
        touchStartX = e.changedTouches[0].screenX;
        touchStartY = e.changedTouches[0].screenY;
      }, { passive: true });

      galleryLightboxImage.addEventListener('touchend', (e) => {
        touchEndX = e.changedTouches[0].screenX;
        touchEndY = e.changedTouches[0].screenY;
        
        const swipeDistanceX = Math.abs(touchEndX - touchStartX);
        const swipeDistanceY = Math.abs(touchEndY - touchStartY);
        
        // Only trigger swipe if horizontal movement is greater than vertical (to avoid interfering with scroll)
        if (swipeDistanceX > swipeDistanceY && swipeDistanceX > minSwipeDistance) {
          if (touchEndX < touchStartX) {
            // Swiped left - show next image
            nextImage();
          } else if (touchEndX > touchStartX) {
            // Swiped right - show previous image
            prevImage();
          }
        }
      }, { passive: true });
    }
  });
</script>

