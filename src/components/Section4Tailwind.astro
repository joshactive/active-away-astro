---
// Section 4 component for Active Away - Tailwind CSS Version
import { getImageByName } from '../utils/cloudflareImages.js';

// Get dynamic image URL
const section4Image = getImageByName('section-4-bg', { size: 'public' });

// Debug: Log the URL being generated
console.log('Section 4 Image URL:', section4Image);
---

<section class="w-full bg-white py-0">
  <div class="w-full">
    <img src={section4Image} alt="Jamie Murray Tennis Programme" class="w-full h-auto object-cover object-center" />
  </div>
</section>
