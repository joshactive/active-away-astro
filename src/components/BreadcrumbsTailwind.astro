---
// Breadcrumbs component - Tailwind CSS Version

interface Props {
  breadcrumbs: Array<{label: string, href?: string}>;
}

const { breadcrumbs } = Astro.props;
---

<section class="w-full bg-gray-50 py-4 border-b border-gray-200">
  <div class="container mx-auto max-w-[1400px] px-4 sm:px-10">
    <nav class="flex items-center gap-2 text-sm font-inter text-gray-600">
      {breadcrumbs.map((crumb, index) => (
        <>
          {crumb.href ? (
            <a href={crumb.href} class="hover:text-[#ad986c] transition-colors">
              {crumb.label}
            </a>
          ) : (
            <span class="text-gray-900 font-medium">{crumb.label}</span>
          )}
          {index < breadcrumbs.length - 1 && (
            <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          )}
        </>
      ))}
    </nav>
  </div>
</section>

<style>
  .font-inter {
    font-family: 'Inter', sans-serif;
  }
</style>

