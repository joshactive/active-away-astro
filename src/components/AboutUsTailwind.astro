---
// About Us section component for Active Away - Tailwind CSS Version
import { getImageByName, getResponsiveImageByName, getStrapiImageAttrs } from '../utils/cloudflareImages.js';

// Accept homeData as prop (fetched once in index.astro)
interface Props {
  homeData?: any;
}

const { homeData } = Astro.props;

// Calculate years of experience dynamically (current year - 2006)
const yearsOfExperience = new Date().getFullYear() - 2006;

// Use Strapi data (no fallbacks - must be set in Strapi)
const ABOUT_TOP_SIZES = '(max-width: 1024px) 0px, 33vw';
const ABOUT_BOTTOM_SIZES = '(max-width: 1024px) 100vw, 33vw';

const buildAboutImage = (imageName, alt, width, height, sizes) => {
  const attrs = getResponsiveImageByName(imageName, {
    displayWidth: width,
    displayHeight: height,
    fit: 'cover',
    alt,
    sizes
  });

  if (attrs) {
    return attrs;
  }

  const fallbackSrc = getImageByName(imageName, { width, height, fit: 'cover', format: 'auto', quality: 85 });
  return {
    src: fallbackSrc,
    url: fallbackSrc,
    width,
    height,
    alt,
    loading: 'lazy',
    sizes
  };
};

const aboutData = {
  kicker: homeData?.about?.kicker || "ABOUT US",
  title: homeData?.about?.title || "",
  description: homeData?.about?.description || "",
  content: homeData?.about?.content || "",
  stats: homeData?.about?.stats || [],
  experience: {
    years: `${yearsOfExperience}+`,
    label: "Years of Experience"
  },
  images: {
    top: homeData?.about?.images?.image2
      ? getStrapiImageAttrs(homeData.about.images.image2, {
          displayWidth: 800,
          displayHeight: 1200,
          fit: 'cover',
          alt: homeData.about.images.image2.alt || 'Tennis coaching session',
          sizes: ABOUT_TOP_SIZES
        })
      : buildAboutImage('about-us-2', 'Tennis coaching session', 800, 1200, ABOUT_TOP_SIZES),
    bottom: homeData?.about?.images?.image1
      ? getStrapiImageAttrs(homeData.about.images.image1, {
          displayWidth: 1000,
          displayHeight: 800,
          fit: 'cover',
          alt: homeData.about.images.image1.alt || 'Tennis group activity',
          sizes: ABOUT_BOTTOM_SIZES
        })
      : buildAboutImage('about-us-1', 'Tennis group activity', 1000, 800, ABOUT_BOTTOM_SIZES)
  }
};

// Debug: Log the URLs being generated
console.log('About Us Image 1 URL:', aboutData.images.bottom.url || aboutData.images.bottom.src);
console.log('About Us Image 2 URL:', aboutData.images.top.url || aboutData.images.top.src);
---

<section class="w-full bg-white py-8 sm:py-16 lg:py-24">
  <div class="container mx-auto px-4 sm:px-10">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 sm:gap-8 lg:gap-12 lg:items-stretch">
      <!-- Column 1: Top Image (Hidden on mobile) -->
      <div class="hidden lg:block lg:order-1 h-full">
        <div class="relative overflow-hidden rounded-2xl bg-gray-900 h-full">
          <img 
            src={aboutData.images.top.src || aboutData.images.top.url} 
            {...(aboutData.images.top.srcset && { srcset: aboutData.images.top.srcset })}
            sizes={aboutData.images.top.sizes || ABOUT_TOP_SIZES}
            width={aboutData.images.top.width || 800}
            height={aboutData.images.top.height || 1200}
            alt={aboutData.images.top.alt || 'Tennis coaching'}
            loading={aboutData.images.top.loading || 'lazy'}
            class="w-full h-full object-cover" 
          />
        </div>
      </div>

      <!-- Column 2: Experience Box + Bottom Image -->
      <div class="lg:order-2 h-full flex flex-col">
        <!-- Experience Box -->
        <div class="bg-gold-50 border border-gold-200 rounded-2xl p-6 sm:p-8 text-center mb-6 sm:mb-8">
          <div class="text-4xl sm:text-5xl lg:text-6xl font-playfair font-bold text-gold-700 mb-2">
            {aboutData.experience.years}
          </div>
          <div class="text-sm sm:text-base lg:text-lg font-inter font-medium text-gold-800">
            {aboutData.experience.label}
          </div>
        </div>
        
        <!-- Bottom Image -->
        <div class="relative overflow-hidden rounded-2xl bg-gray-900 flex-1">
          <img 
            src={aboutData.images.bottom.src || aboutData.images.bottom.url} 
            {...(aboutData.images.bottom.srcset && { srcset: aboutData.images.bottom.srcset })}
            sizes={aboutData.images.bottom.sizes || ABOUT_BOTTOM_SIZES}
            width={aboutData.images.bottom.width || 1000}
            height={aboutData.images.bottom.height || 800}
            alt={aboutData.images.bottom.alt || 'Tennis group'}
            loading={aboutData.images.bottom.loading || 'lazy'}
            class="w-full h-full object-cover" 
          />
        </div>
      </div>

      <!-- Column 3: Content -->
      <div class="lg:order-3 h-full flex flex-col justify-center">
        <!-- Kicker -->
        <div class="text-sm sm:text-base font-inter font-medium text-gray-900 tracking-widest uppercase mb-3 sm:mb-4">
          {aboutData.kicker}
        </div>
        
        <!-- Main Content -->
        <div class="space-y-6 sm:space-y-8">
          <h2 class="text-2xl sm:text-3xl lg:text-4xl font-playfair font-semibold text-gray-900">
            {aboutData.title}
          </h2>
          
          <div class="space-y-3 sm:space-y-4 lg:space-y-6">
            <p class="text-lg sm:text-xl font-inter font-semibold text-gray-900 leading-relaxed">
              {aboutData.description}
            </p>
            <p class="text-base sm:text-lg font-inter text-gray-800 leading-relaxed">
              {aboutData.content}
            </p>
          </div>
          
          <!-- Stats List -->
          <div class="space-y-3 sm:space-y-4">
            {aboutData.stats.map((stat) => (
              <div class="flex items-center gap-3 sm:gap-4">
                <svg class="w-5 h-5 text-gray-600 flex-shrink-0" viewBox="0 0 18 18" fill="none">
                  <path d="M3 9H15M15 9L9 3M15 9L9 15" stroke="#1E1E1E" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span class="text-sm sm:text-base font-inter text-gray-700">{stat}</span>
              </div>
            ))}
          </div>
          
          <!-- CTA Button -->
          <button class="flex items-center gap-3 bg-gray-900 hover:bg-gray-800 text-white px-6 sm:px-8 py-3 sm:py-4 rounded-full font-inter font-medium text-sm sm:text-base transition-all duration-300 hover:-translate-y-0.5">
            <span>Learn More</span>
            <svg class="w-5 h-5" viewBox="0 0 22 22" fill="none">
              <path d="M5.5 16.5L16.5 5.5M16.5 5.5H5.5M16.5 5.5V16.5" stroke="#FFFFFF" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .font-inter {
    font-family: 'Inter', sans-serif;
  }
  
  .font-playfair {
    font-family: 'Playfair Display', serif;
  }
</style>
