---
// Thriving Community section component for Active Away - Tailwind CSS Version
import { getImageByName } from '../utils/cloudflareImages.js';

// Accept homeData as prop (fetched once in index.astro)
interface Props {
  homeData?: any;
}

const { homeData } = Astro.props;

const communityData = {
  title: homeData?.thrivingCommunity?.title || "Our Thriving Community",
  description: homeData?.thrivingCommunity?.description || "Active Away would be nothing without our thriving community. We talk a lot about being part of 'The Active Away Family' and have built a completely free online platform that all event attendees can join. Our free membership offers exclusive benefits and an online forum to discuss your next event.",
  bulletPoints: homeData?.thrivingCommunity?.bulletPoints?.length > 0 ? homeData.thrivingCommunity.bulletPoints : Array(8).fill("Lorem Ipsum"),
  buttonText: homeData?.thrivingCommunity?.buttonText || "Learn More",
  images: {
    top: homeData?.thrivingCommunity?.images?.bg || { url: getImageByName('thriving-community-bg', { size: 'public' }), alt: 'Tennis community', width: 1200, height: 600 },
    bottomLeft: homeData?.thrivingCommunity?.images?.image2 || { url: getImageByName('thriving-community-2', { size: 'public' }), alt: 'Tennis training', width: 600, height: 800 },
    bottomRight: homeData?.thrivingCommunity?.images?.image1 || { url: getImageByName('thriving-community-1', { size: 'public' }), alt: 'Tennis group', width: 600, height: 800 }
  }
};

// Debug: Log the URLs being generated
console.log('Thriving Community Images URLs:', { top: communityData.images.top.url, bottomLeft: communityData.images.bottomLeft.url, bottomRight: communityData.images.bottomRight.url });
---

<section class="w-full bg-gray-50 py-12 sm:py-16 lg:py-24">
  <div class="container mx-auto px-4 sm:px-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8 lg:gap-12">
      <!-- Images Column -->
      <div class="lg:order-1">
        <div class="space-y-3 sm:space-y-4 lg:space-y-6">
          <!-- Top Image -->
          <div class="relative overflow-hidden rounded-2xl bg-gray-900">
            <img src={communityData.images.top.url} alt={communityData.images.top.alt || 'Tennis player'} width={communityData.images.top.width} height={communityData.images.top.height} class="w-full h-48 sm:h-64 lg:h-80 object-cover" loading="lazy" />
          </div>
          
          <!-- Bottom Images Row -->
          <div class="grid grid-cols-2 gap-4 sm:gap-6">
            <div class="relative overflow-hidden rounded-2xl bg-gray-900">
              <img src={communityData.images.bottomLeft.url} alt={communityData.images.bottomLeft.alt || 'Tennis group'} width={communityData.images.bottomLeft.width} height={communityData.images.bottomLeft.height} class="w-full h-32 sm:h-40 lg:h-48 object-cover" loading="lazy" />
            </div>
            <div class="relative overflow-hidden rounded-2xl bg-gray-900">
              <img src={communityData.images.bottomRight.url} alt={communityData.images.bottomRight.alt || 'Tennis couple'} width={communityData.images.bottomRight.width} height={communityData.images.bottomRight.height} class="w-full h-32 sm:h-40 lg:h-48 object-cover" loading="lazy" />
            </div>
          </div>
        </div>
      </div>

      <!-- Content Column -->
      <div class="lg:order-2">
        <div class="space-y-6 sm:space-y-8">
          <!-- Header -->
          <div>
            <h2 class="text-2xl sm:text-3xl lg:text-4xl font-playfair font-semibold text-gray-900 mb-4 sm:mb-6">
              {communityData.title}
            </h2>
            <p class="text-base sm:text-lg font-inter text-gray-800 leading-relaxed">
              {communityData.description}
            </p>
          </div>

          <!-- Bullet Points -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
            <div class="space-y-3 sm:space-y-4">
              {communityData.bulletPoints.slice(0, 4).map((point) => (
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-gold rounded-full flex-shrink-0"></div>
                  <span class="text-sm sm:text-base font-inter text-gray-700">{point}</span>
                </div>
              ))}
            </div>
            <div class="space-y-3 sm:space-y-4">
              {communityData.bulletPoints.slice(4, 8).map((point) => (
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-gold rounded-full flex-shrink-0"></div>
                  <span class="text-sm sm:text-base font-inter text-gray-700">{point}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- CTA Button -->
          <button class="flex items-center gap-3 bg-gray-900 hover:bg-gray-800 text-white px-6 sm:px-8 py-3 sm:py-4 rounded-full font-inter font-medium text-sm sm:text-base transition-all duration-300 hover:-translate-y-0.5">
            <span>{communityData.buttonText}</span>
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none">
              <path d="M7 17L17 7M17 7H7M17 7V17" stroke="#FFFFFF" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .font-inter {
    font-family: 'Inter', sans-serif;
  }
  
  .font-playfair {
    font-family: 'Playfair Display', serif;
  }
</style>
