---
// History Timeline section component - Tailwind CSS Version

interface Props {
  aboutData?: any;
}

const { aboutData } = Astro.props;

const historyData = {
  heading: aboutData?.history?.heading || 'Our History',
  events: aboutData?.history?.events || []
};

const hasHistory = historyData.events && historyData.events.length > 0;
---

{hasHistory && (
  <section class="w-full bg-gray-50 py-12 sm:py-16 lg:py-24">
    <div class="container mx-auto max-w-[1400px] px-4 sm:px-10">
      
      {historyData.heading && (
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-playfair font-semibold text-gray-900 mb-8 sm:mb-12 text-center">
          {historyData.heading}
        </h2>
      )}
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
        {historyData.events.map((event) => (
          <div class="bg-white border-2 border-gray-200 rounded-2xl p-6 sm:p-8 hover:shadow-lg hover:border-gray-300 transition-all duration-300">
            {/* Year */}
            <div class="text-sm sm:text-base font-inter font-semibold text-[#ad986c] mb-2 uppercase tracking-wide">
              {event.year}
            </div>
            
            {/* Heading */}
            <h3 class="text-lg sm:text-xl font-playfair font-semibold text-gray-900 mb-3">
              {event.heading}
            </h3>
            
            {/* Description */}
            {event.description && (
              <p class="text-base sm:text-lg font-inter text-gray-700 leading-relaxed">
                {event.description}
              </p>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
)}

<style>
  .font-inter {
    font-family: 'Inter', sans-serif;
  }
  
  .font-playfair {
    font-family: 'Playfair Display', serif;
  }
</style>

