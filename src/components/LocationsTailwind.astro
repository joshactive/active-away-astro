                    <p class="text-sm text-gray-600 font-inter mb-1">From</p>
                    <p class="text-3xl font-bold text-[#ad986c] font-playfair">{location.amount.replace('from ', '').replace('pp', '')}<span class="text-lg">pp</span></p>
