// Tennis Holiday Archive Page - Shows all tennis holidays
export const prerender = true;

import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTennisHolidays, getTennisHolidayPage, getPageSEO } from '../../utils/strapi.js';
import { getStrapiImageAttrs } from '../../utils/cloudflareImages.js';

// Fetch page content from Strapi
let pageContent = null;
try {
  pageContent = await getTennisHolidayPage();
  console.log('ðŸŽ¾ [tennis-holiday] Page content fetched successfully');
} catch (error) {
  console.warn('[tennis-holiday] Could not fetch page content, using defaults:', error.message);
}

// Fetch SEO data separately for proper metaImage population
let seoData = null;
try {
  seoData = await getPageSEO('tennis-holiday-page');
  if (seoData) {
    console.log('ðŸ“„ [tennis-holiday] SEO data fetched successfully');
  }
} catch (error) {
  console.warn('[tennis-holiday] Could not fetch SEO data:', error.message);
}

// Fetch all tennis holidays with events
let tennisHolidaysData = { holidays: [], metadata: { total: 0, countries: [], priceRange: { min: 0, max: 5000 }, availableDates: [] } };

try {
  const allHolidays = await getTennisHolidays(1, 100);
  
  // Filter: only show holidays with displayOnFrontEnd = true
  const visibleHolidays = allHolidays.filter(h => h.displayOnFrontEnd === true);
  console.log(`ðŸŽ¾ [tennis-holiday archive] Filtered to ${visibleHolidays.length} visible holidays (out of ${allHolidays.length} total)`);
  
  // Fetch all events for tennis holidays
  const today = new Date();
  today.setHours(0, 0, 0, 0);
  const todayISO = today.toISOString().split('T')[0];
  
  // Get unique values from visible holidays
  const uniqueValues = [...new Set(visibleHolidays.map(h => h.uniqueValue).filter(Boolean))];
  
  // Fetch events for all tennis holidays
  let allEvents = [];
  if (uniqueValues.length > 0) {
    const { fetchAPI } = await import('../../utils/strapi.js');
    const eventsData = await fetchAPI(`/events?filters[dateUntil][$gte]=${todayISO}&pagination[pageSize]=100&sort=dateFrom:asc`);
    
    if (eventsData && eventsData.data) {
      allEvents = eventsData.data.map(item => {
        const event = item.attributes || item;
        return {
          id: item.id,
          uniqueValue: event.uniqueValue,
          dateFrom: event.dateFrom,
          dateUntil: event.dateUntil
        };
      });
    }
  }
  
  // Create map of uniqueValue to events
  const eventsByUniqueValue = {};
  allEvents.forEach(event => {
    if (event.uniqueValue) {
      if (!eventsByUniqueValue[event.uniqueValue]) {
        eventsByUniqueValue[event.uniqueValue] = [];
      }
      eventsByUniqueValue[event.uniqueValue].push(event);
    }
  });
  
  // Associate events with holidays
  const allEventDates = [];
  visibleHolidays.forEach(holiday => {
    if (holiday.uniqueValue && eventsByUniqueValue[holiday.uniqueValue]) {
      holiday.events = eventsByUniqueValue[holiday.uniqueValue];
      holiday.eventDates = holiday.events.map(e => e.dateFrom).filter(Boolean);
    } else {
      holiday.events = [];
      holiday.eventDates = [];
    }
  });
  
  // Collect all unique event dates
  allEvents.forEach(event => {
    if (event.dateFrom) allEventDates.push(event.dateFrom);
    if (event.dateUntil) allEventDates.push(event.dateUntil);
  });
  const uniqueDates = [...new Set(allEventDates)].sort();
  
  // Extract countries
  const countries = [...new Set(visibleHolidays.map(h => h.country).filter(Boolean))].sort();
  
  // Extract price range
  const prices = visibleHolidays.map(h => h.price).filter(Boolean);
  const priceRange = prices.length > 0 ? {
    min: Math.min(...prices),
    max: Math.max(...prices)
  } : { min: 0, max: 5000 };
  
  tennisHolidaysData = {
    holidays: visibleHolidays,
    metadata: {
      total: visibleHolidays.length,
      countries,
      priceRange,
      availableDates: uniqueDates
    }
  };
  
  console.log(`ðŸŽ¾ [tennis-holiday archive] Showing ${visibleHolidays.length} tennis holidays (displayOnFrontEnd = true)`);
  console.log(`ðŸ”— Matched ${visibleHolidays.filter(h => h.events && h.events.length > 0).length} holidays with events`);
  console.log(`ðŸ“… Available dates: ${uniqueDates.length}`);
} catch (error) {
  console.error('[tennis-holiday archive] Error fetching data:', error.message);
}

const { holidays, metadata } = tennisHolidaysData;
const HOLIDAY_IMAGE_QUALITY = 60;

// Extract page content with fallbacks
const heroTitle = pageContent?.hero?.title || 'Discover Our Tennis Holidays';
const heroSubtitle = pageContent?.hero?.subtitle || 'Join us for unforgettable tennis holidays at stunning destinations worldwide. Expert coaching, beautiful resorts, and incredible experiences await.';
const heroKicker = pageContent?.hero?.kicker || 'TENNIS HOLIDAYS';
const heroBackgroundImage = pageContent?.hero?.backgroundImage?.url || 'https://activeaway.com/cdn-cgi/imagedelivery/-aT8Z2F9gGvZ9fdofZcCaQ/a5c7fc48-dfbc-4923-a015-20f2d9d31700/public';
const heroBackgroundImageAlt = pageContent?.hero?.backgroundImage?.alt || 'Two tennis players high-five on an outdoor red court with mountains and trees in the background.';

// Extract SEO fields with fallbacks
const pageTitle = seoData?.metaTitle || pageContent?.seo?.metaTitle || 'Tennis Holidays - Active Away';
const pageDescription = seoData?.metaDescription || pageContent?.seo?.metaDescription || 'Explore our complete collection of tennis holidays across the world. Filter by location, price, and available dates to find your perfect tennis getaway.';
const metaImage = seoData?.metaImage || pageContent?.seo?.metaImage || null;
const metaImageAlt = seoData?.metaImageAlt || pageContent?.seo?.metaImageAlt || null;
const metaImageWidth = seoData?.metaImageWidth || null;
const metaImageHeight = seoData?.metaImageHeight || null;
const keywords = seoData?.keywords || pageContent?.seo?.keywords || null;
const canonicalURL = seoData?.canonicalURL || pageContent?.seo?.canonicalURL || 'https://activeaway.com/tennis-holiday';
