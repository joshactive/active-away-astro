---
// Dynamic route for individual tennis holidays
export const prerender = true;

import HolidayDetail from '../../components/HolidayDetail.astro';
import { getTennisHolidays, getTennisHolidayBySlug, getTennisHolidayNestedData, getTennisHolidaySEO, getEventsByUniqueValue, getProductReviews } from '../../utils/strapi.js';

// Generate static paths for all tennis holidays
export async function getStaticPaths() {
  const tennisHolidays = await getTennisHolidays(1, 100);
  
  return tennisHolidays.map((holiday) => ({
    params: { slug: holiday.slug },
    props: { 
      slug: holiday.slug,
      id: holiday.strapiId,
      documentId: holiday.documentId
    }
  }));
}

const { slug } = Astro.params;
const { id, documentId } = Astro.props;
const fallbackIdentifiers = { id, documentId };
console.log(`ðŸŽ¾ [${slug}] Static props identifiers:`, fallbackIdentifiers);

// Fetch the specific tennis holiday data
let holidayData = null;
try {
  holidayData = await getTennisHolidayBySlug(slug, fallbackIdentifiers);
  if (holidayData) {
    console.log(`ðŸŽ¾ [${slug}] Tennis holiday data fetched successfully`);
  } else {
    console.warn(`ðŸŽ¾ [${slug}] Tennis holiday data not found after lookup`);
  }
} catch (error) {
  console.error(`[${slug}] Error fetching tennis holiday:`, error.message);
}

// If no data found, show 404
if (!holidayData) {
  return Astro.redirect('/404');
}

// SEPARATE API CALL: Fetch nested data (rooms.roomGallery, tripImages)
// This is required for Strapi v5's nested population
try {
  const nestedData = await getTennisHolidayNestedData(slug);
  if (nestedData) {
    // Merge nested data into holidayData
    if (nestedData.rooms && nestedData.rooms.length > 0) {
      holidayData.rooms = nestedData.rooms;
    }
    if (nestedData.tripImages && nestedData.tripImages.length > 0) {
      holidayData.tripImages = nestedData.tripImages;
    }
    console.log(`ðŸ¨ [${slug}] Nested data merged: ${nestedData.rooms?.length || 0} rooms, ${nestedData.tripImages?.length || 0} trip images`);
  }
} catch (error) {
  console.error(`[${slug}] Error fetching nested data:`, error.message);
}

// SEPARATE API CALL: Fetch SEO data with metaImage
// This is required for Strapi v5's nested population of seo.metaImage
try {
  const seoData = await getTennisHolidaySEO(slug);
  if (seoData) {
    // Merge SEO data into holidayData
    holidayData.seo = seoData;
    console.log(`ðŸ“„ [${slug}] SEO data merged: ${seoData.metaTitle || 'No title'}, metaImage: ${seoData.metaImage ? 'Yes' : 'No'}`);
  }
} catch (error) {
  console.error(`[${slug}] Error fetching SEO data:`, error.message);
}

// Fetch random other tennis destinations (excluding current one)
let similarHolidays = [];
try {
  const allHolidays = await getTennisHolidays(1, 50);
  
  // Filter: exclude current holiday AND only show those with displayOnFrontEnd = true
  const otherHolidays = allHolidays.filter(h => 
    h.slug !== slug && h.displayOnFrontEnd === true
  );
  
  // Randomize and select 3 destinations
  if (otherHolidays.length > 0) {
    const shuffled = [...otherHolidays];
    for (let i = shuffled.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
    }
    similarHolidays = shuffled.slice(0, 3);
    console.log(`ðŸŽ² Selected ${similarHolidays.length} random tennis destinations from ${otherHolidays.length} available`);
  }
} catch (error) {
  console.error('Error fetching other tennis destinations:', error);
}

// Fetch events matching this tennis holiday's uniqueValue
let matchingEvents = [];
try {
  console.log(`ðŸŽ¾ Debug - Holiday Title: ${holidayData.title}`);
  console.log(`ðŸŽ¾ Debug - Holiday uniqueValue: "${holidayData.uniqueValue}"`);
  
  if (holidayData.uniqueValue) {
    console.log(`ðŸŽ¾ Fetching events for tennis holiday uniqueValue: "${holidayData.uniqueValue}"`);
    matchingEvents = await getEventsByUniqueValue(holidayData.uniqueValue);
    console.log(`ðŸŽ¾ Found ${matchingEvents.length} matching event(s)`);
  } else {
    console.warn(`âš ï¸ Tennis holiday "${slug}" has no uniqueValue set`);
  }
} catch (error) {
  console.error('Error fetching events for tennis holiday:', error);
}

// Fetch product reviews if uniqueValue exists
let productReviews = [];
try {
  if (holidayData.uniqueValue) {
    console.log(`â­ Debug - Attempting to fetch reviews for uniqueValue: "${holidayData.uniqueValue}"`);
    productReviews = await getProductReviews(holidayData.uniqueValue);
    console.log(`â­ Debug - Fetched reviews count: ${productReviews.length}`);
    
    if (productReviews.length > 0) {
      holidayData.productReviews = productReviews;
      console.log(`â­ [${slug}] Found ${productReviews.length} reviews matching uniqueValue "${holidayData.uniqueValue}"`);
    } else {
      console.log(`â­ [${slug}] No reviews found for uniqueValue "${holidayData.uniqueValue}"`);
    }
  } else {
    console.log(`â­ Debug - Skipping review fetch because uniqueValue is missing`);
  }
} catch (error) {
  console.error('Error fetching reviews:', error);
}

// Helper to calculate product schema
const productSchema = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": holidayData.title,
  "description": holidayData.introText || `Tennis Holiday at ${holidayData.title}`,
  "image": holidayData.headerImage?.url || `https://activeaway.com/images/tennis-holiday-placeholder.jpg`,
  "offers": {
    "@type": "Offer",
    "priceCurrency": "GBP",
    "price": holidayData.priceFrom || "0",
    "url": Astro.url.href,
    "availability": "https://schema.org/InStock"
  }
};

// Add AggregateRating if reviews exist
if (holidayData.productReviews && holidayData.productReviews.length > 0) {
  const reviewCount = holidayData.productReviews.length;
  const avgRating = holidayData.productReviews.reduce((acc, r) => acc + (r.reviewRating || 5), 0) / reviewCount;
  
  productSchema.aggregateRating = {
    "@type": "AggregateRating",
    "ratingValue": avgRating.toFixed(1),
    "reviewCount": reviewCount,
    "bestRating": "5",
    "worstRating": "1"
  };
}
---

<HolidayDetail 
  holidayData={holidayData}
  holidayType="tennis-holiday"
  matchingEvents={matchingEvents}
  similarHolidays={similarHolidays}
  slug={slug}
>
  <script type="application/ld+json" slot="head" set:html={JSON.stringify(productSchema)} />
</HolidayDetail>
