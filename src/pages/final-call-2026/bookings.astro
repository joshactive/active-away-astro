              data-date-from={event.dateFrom}
              data-discount-code={event.FinalCall26}
            >
              {/* Card Image */}
              <div class="aspect-video overflow-hidden bg-gray-100 relative">
                {imgAttrs.src && (
                  <img 
                    src={imgAttrs.src}
