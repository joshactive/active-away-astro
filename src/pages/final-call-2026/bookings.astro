<script define:vars={{ initialEvents: events, metadata }}>
  // Global state
  let allEvents = [...initialEvents];
  let filteredEvents = [...initialEvents];
  let displayedEvents = [...initialEvents].slice(0, 18);
  let currentPage = 1;
  const pageSize = 18;
  let isLoading = false;
  let hasMoreEvents = allEvents.length > displayedEvents.length;

  // Filter state
  const filters = {
    searchQuery: '',
    productTypes: new Set(), // Sidebar checkboxes
    discountCode: 'all',  // Quick filter pills for discount codes
    countryEvents: new Set(),
    venues: new Set(), // From homepage search
    month: null, // From homepage search
    hideSoldOut: false,
    priceMin: null,
    priceMax: null,
    dateFrom: null,
    dateTo: null
  };

  // DOM elements
  const eventsGrid = document.getElementById('eventsGrid');
  const loadingIndicator = document.getElementById('loadingIndicator');
  const emptyState = document.getElementById('emptyState');
  const endMessage = document.getElementById('endMessage');
  const scrollSentinel = document.getElementById('scrollSentinel');
  const filteredCountEl = document.getElementById('filteredCount');
  const activeFilterCountEl = document.getElementById('activeFilterCount');
  const filterStatusEl = document.getElementById('filterStatus');
  const sortBySelect = document.getElementById('sortBy');
  
  // Mobile filter toggle
  const mobileFilterToggle = document.getElementById('mobileFilterToggle');
  const filtersContainer = document.getElementById('filtersContainer');
  const filterChevron = document.getElementById('filterChevron');

  // Initialize
  function init() {
    setupEventListeners();
    setupInfiniteScroll();
    restoreFiltersFromURL();
    
    // Render initial state
    renderEvents();
    updateFilterCount();
  }

  // Setup event listeners
  function setupEventListeners() {
    // Mobile filter toggle
    mobileFilterToggle?.addEventListener('click', () => {
      filtersContainer.classList.toggle('show');
      if (filtersContainer.classList.contains('show')) {
        filterChevron.style.transform = 'rotate(180deg)';
      } else {
        filterChevron.style.transform = 'rotate(0deg)';
      }
    });

    // Filter group collapse/expand
    document.querySelectorAll('.filter-header').forEach(header => {
      header.addEventListener('click', () => {
        const filterGroup = header.parentElement;
        filterGroup.classList.toggle('collapsed');
      });
    });

    // Discount code quick filter buttons (pills)
    document.querySelectorAll('.discount-filter-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const selectedDiscount = btn.dataset.discount;
        const isCurrentlyActive = btn.classList.contains('active');
        
        // If clicking the currently active pill (and it's not "All Discounts"), toggle it off
        if (isCurrentlyActive && selectedDiscount !== 'all') {
          // Deactivate this pill and activate "All Discounts"
          btn.classList.remove('active', 'bg-[#ad986c]', 'text-white');
          btn.classList.add('bg-gray-100', 'text-gray-700');
          
          const allBtn = document.querySelector('.discount-filter-btn[data-discount="all"]');
          if (allBtn) {
            allBtn.classList.add('active', 'bg-[#ad986c]', 'text-white');
            allBtn.classList.remove('bg-gray-100', 'text-gray-700');
          }
          
          filters.discountCode = 'all';
        } else {
          // Regular activation logic
          // Update active state
          document.querySelectorAll('.discount-filter-btn').forEach(b => {
            b.classList.remove('active', 'bg-[#ad986c]', 'text-white');
            b.classList.add('bg-gray-100', 'text-gray-700');
          });
          btn.classList.add('active', 'bg-[#ad986c]', 'text-white');
          btn.classList.remove('bg-gray-100', 'text-gray-700');
          
          filters.discountCode = selectedDiscount;
        }
        
        applyFilters();
      });
    });

    // Product checkboxes (sidebar)
    document.querySelectorAll('input[name="product"]').forEach(checkbox => {
      checkbox.addEventListener('change', (e) => {
        if (e.target.checked) {
          filters.productTypes.add(e.target.value);
        } else {
          filters.productTypes.delete(e.target.value);
        }
        
        applyFilters();
      });
    });

    // Search input
    document.getElementById('searchInput')?.addEventListener('input', debounce((e) => {
      filters.searchQuery = e.target.value.toLowerCase().trim();
      applyFilters();
    }, 300));

    // Hide sold out checkbox
    document.getElementById('hideSoldOut')?.addEventListener('change', (e) => {
      filters.hideSoldOut = e.target.checked;
      applyFilters();
    });

    // Country Events checkboxes
    document.querySelectorAll('input[name="countryEvent"]').forEach(checkbox => {
      checkbox.addEventListener('change', (e) => {
        if (e.target.checked) {
          filters.countryEvents.add(e.target.value);
        } else {
          filters.countryEvents.delete(e.target.value);
        }
        applyFilters();
      });
    });

    // Venues filter (checkboxes + from homepage search)
    document.querySelectorAll('input[name="venue"]').forEach(checkbox => {
      checkbox.addEventListener('change', (e) => {
        if (e.target.checked) {
          filters.venues.add(e.target.value);
        } else {
          filters.venues.delete(e.target.value);
        }
        applyFilters();
      });
    });

    // Price range inputs
    document.getElementById('priceMin')?.addEventListener('input', debounce((e) => {
      filters.priceMin = e.target.value ? parseInt(e.target.value) : null;
      applyFilters();
    }, 500));

    document.getElementById('priceMax')?.addEventListener('input', debounce((e) => {
      filters.priceMax = e.target.value ? parseInt(e.target.value) : null;
      applyFilters();
    }, 500));

    // Date range inputs
    const dateFromInput = document.getElementById('dateFrom');
    const dateToInput = document.getElementById('dateTo');
    
    dateFromInput?.addEventListener('change', (e) => {
      filters.dateFrom = e.target.value || null;
      
      // Auto-set end date to 60 days after start date
      if (filters.dateFrom && dateToInput) {
        const startDate = new Date(filters.dateFrom);
        const endDate = filters.dateTo ? new Date(filters.dateTo) : null;
        
        if (!endDate || endDate <= startDate) {
          const autoEndDate = new Date(startDate);
          autoEndDate.setDate(autoEndDate.getDate() + 60);
          const autoEndDateStr = autoEndDate.toISOString().split('T')[0];
          dateToInput.value = autoEndDateStr;
          filters.dateTo = autoEndDateStr;
        }
      }
      
      applyFilters();
    });

    dateToInput?.addEventListener('change', (e) => {
      filters.dateTo = e.target.value || null;
      applyFilters();
    });

    // Sort by dropdown
    sortBySelect?.addEventListener('change', (e) => {
      applySorting(e.target.value);
    });

    // Clear filters button
    document.getElementById('clearFilters')?.addEventListener('click', clearAllFilters);
    document.getElementById('clearFiltersTop')?.addEventListener('click', clearAllFilters);
    document.getElementById('emptyStateClearBtn')?.addEventListener('click', clearAllFilters);
  }

  // Apply sorting
  function applySorting(sortValue) {
    switch (sortValue) {
      case 'date-asc':
        filteredEvents.sort((a, b) => {
          const dateA = a.dateFrom ? new Date(a.dateFrom) : new Date('9999-12-31');
          const dateB = b.dateFrom ? new Date(b.dateFrom) : new Date('9999-12-31');
          return dateA - dateB;
        });
        break;
      case 'date-desc':
        filteredEvents.sort((a, b) => {
          const dateA = a.dateFrom ? new Date(a.dateFrom) : new Date(0);
          const dateB = b.dateFrom ? new Date(b.dateFrom) : new Date(0);
          return dateB - dateA;
        });
        break;
      case 'price-low':
        filteredEvents.sort((a, b) => (a.price || 0) - (b.price || 0));
        break;
      case 'price-high':
        filteredEvents.sort((a, b) => (b.price || 0) - (a.price || 0));
        break;
      case 'name-asc':
        filteredEvents.sort((a, b) => a.title.localeCompare(b.title));
        break;
      case 'name-desc':
        filteredEvents.sort((a, b) => b.title.localeCompare(a.title));
        break;
    }

    currentPage = 1;
    displayedEvents = filteredEvents.slice(0, pageSize);
    hasMoreEvents = filteredEvents.length > displayedEvents.length;
    renderEvents();
    updateFilterCount();
    updateURL();
  }

  // Apply filters
  function applyFilters() {
    console.log('ðŸ” [final-call-2026] Applying filters:', {
      productTypes: [...filters.productTypes],
      discountCode: filters.discountCode,
      venues: [...filters.venues],
      month: filters.month,
      searchQuery: filters.searchQuery,
      totalEvents: allEvents.length
    });
    
    let debugCount = 0;
    const today = new Date();
    today.setHours(0, 0, 0, 0);
    
    filteredEvents = allEvents.filter(event => {
      const passedFilters = debugCount < 3; // Only log first 3 events for debugging
      if (passedFilters && filters.month) {
        console.log(`Event ${event.id}: "${event.title}", dateFrom: ${event.dateFrom}, venue: "${event.venue_plain_text}"`);
      }
      debugCount++;
      
      // ALWAYS filter out past events (safety check)
      if (event.dateFrom) {
        const eventDate = new Date(event.dateFrom);
        if (eventDate < today) {
          return false; // Skip past events
        }
      }
      
      // Search filter
      if (filters.searchQuery && !event.title.toLowerCase().includes(filters.searchQuery)) {
        return false;
      }

      // Hide sold out filter
      if (filters.hideSoldOut && event.isSoldOut) {
        return false;
      }

      // Discount code filter (pills)
      if (filters.discountCode !== 'all' && event.FinalCall26 !== filters.discountCode) {
        return false;
      }

      // Product filter (sidebar checkboxes)
      if (filters.productTypes.size > 0 && !filters.productTypes.has(event.product)) {
        return false;
      }

      // Country Events filter (renamed to Country)
      if (filters.countryEvents.size > 0 && !filters.countryEvents.has(event.countryEvents)) {
        return false;
      }

      // Venues filter (from homepage search)
      if (filters.venues.size > 0) {
        const eventVenue = event.venue_plain_text || '';
        if (!filters.venues.has(eventVenue)) {
          return false;
        }
      }

      // Month filter (from homepage search)
      if (filters.month) {
        if (event.dateFrom) {
          const eventDate = new Date(event.dateFrom);
          const eventMonth = eventDate.toLocaleDateString('en-US', { month: 'long' });
          if (eventMonth !== filters.month) {
            return false;
          }
        } else {
          return false;
        }
      }

      // Price range filter
      if (filters.priceMin !== null && event.price < filters.priceMin) {
        return false;
      }
      if (filters.priceMax !== null && event.price > filters.priceMax) {
        return false;
      }

      // Date range filter
      if (filters.dateFrom || filters.dateTo) {
        const eventDate = new Date(event.dateFrom);
        if (filters.dateFrom && eventDate < new Date(filters.dateFrom)) {
          return false;
        }
        if (filters.dateTo && eventDate > new Date(filters.dateTo)) {
          return false;
        }
      }

      return true;
    });

    console.log(`âœ… [final-call-2026] Filtered ${filteredEvents.length} events from ${allEvents.length} total`);

    // Apply current sorting
    const currentSort = sortBySelect?.value || 'date-asc';
    if (currentSort !== 'date-asc') {
      applySorting(currentSort);
      return;
    }

    currentPage = 1;
    displayedEvents = filteredEvents.slice(0, pageSize);
    hasMoreEvents = filteredEvents.length > displayedEvents.length;
    
    renderEvents();
    updateFilterCount();
    updateURL();
  }

  // Render events
  function renderEvents() {
    const cards = eventsGrid.querySelectorAll('.event-card');
    
    console.log(`ðŸŽ¨ [final-call-2026] Rendering ${displayedEvents.length} events out of ${filteredEvents.length} filtered`);
    console.log(`ðŸŽ¨ [final-call-2026] Total cards in DOM: ${cards.length}`);
    
    // Hide all cards first
    cards.forEach(card => {
      card.classList.add('hidden');
      card.style.display = 'none'; // Force hide with inline style
    });

    // Show filtered cards
    let foundCount = 0;
    displayedEvents.forEach(event => {
      const card = eventsGrid.querySelector(`[data-event-id="${event.id}"]`);
      if (card) {
        card.classList.remove('hidden');
        card.style.display = ''; // Remove inline style to let CSS take over
        foundCount++;
      } else {
        console.warn(`âš ï¸ [final-call-2026] Card not found for event ID: ${event.id}, Title: ${event.title}`);
      }
    });

    console.log(`ðŸŽ¨ [final-call-2026] Rendered ${foundCount} cards successfully`);

    // Update counts
    filteredCountEl.textContent = filteredEvents.length;

    // Show/hide empty state
    if (filteredEvents.length === 0) {
      emptyState.classList.remove('hidden');
      endMessage.classList.add('hidden');
    } else {
      emptyState.classList.add('hidden');
      if (!hasMoreEvents) {
        endMessage.classList.remove('hidden');
      } else {
        endMessage.classList.add('hidden');
      }
    }
  }

  // Setup infinite scroll
  function setupInfiniteScroll() {
    const observer = new IntersectionObserver(
      (entries) => {
        if (entries[0].isIntersecting && hasMoreEvents && !isLoading) {
          loadMoreEvents();
        }
      },
      { rootMargin: '200px' }
    );

    if (scrollSentinel) {
      observer.observe(scrollSentinel);
    }
  }

  // Load more events
  function loadMoreEvents() {
    if (isLoading || !hasMoreEvents) return;

    isLoading = true;
    loadingIndicator.classList.remove('hidden');

    setTimeout(() => {
      currentPage++;
      const startIndex = (currentPage - 1) * pageSize;
      const endIndex = startIndex + pageSize;
      const newEvents = filteredEvents.slice(startIndex, endIndex);

      displayedEvents = [...displayedEvents, ...newEvents];
      hasMoreEvents = filteredEvents.length > displayedEvents.length;

      renderEvents();
      
      isLoading = false;
      loadingIndicator.classList.add('hidden');

      if (!hasMoreEvents) {
        endMessage.classList.remove('hidden');
      }
    }, 500);
  }

  // Update filter count badge
  function updateFilterCount() {
    let count = 0;
    if (filters.searchQuery) count++;
    if (filters.productTypes.size > 0) count++;
    if (filters.discountCode !== 'all') count++;
    if (filters.hideSoldOut) count++;
    if (filters.countryEvents.size > 0) count++;
    if (filters.venues.size > 0) count++;
    if (filters.month) count++;
    if (filters.priceMin !== null || filters.priceMax !== null) count++;
    if (filters.dateFrom !== null || filters.dateTo !== null) count++;

    if (count > 0) {
      activeFilterCountEl.textContent = count;
      activeFilterCountEl.classList.remove('hidden');
      filterStatusEl.textContent = `${count} filter${count > 1 ? 's' : ''} selected`;
    } else {
      activeFilterCountEl.classList.add('hidden');
      filterStatusEl.textContent = '0 filters selected';
    }
  }

  // Clear all filters
  function clearAllFilters() {
    filters.searchQuery = '';
    filters.productTypes.clear();
    filters.discountCode = 'all';
    filters.countryEvents.clear();
    filters.venues.clear();
    filters.month = null;
    filters.hideSoldOut = false;
    filters.priceMin = null;
    filters.priceMax = null;
    filters.dateFrom = null;
    filters.dateTo = null;

    // Clear search
    document.getElementById('searchInput').value = '';
    
    // Clear hide sold out
    document.getElementById('hideSoldOut').checked = false;

    // Reset discount filter buttons
    document.querySelectorAll('.discount-filter-btn').forEach(btn => {
      btn.classList.remove('active', 'bg-[#ad986c]', 'text-white');
      btn.classList.add('bg-gray-100', 'text-gray-700');
      if (btn.dataset.discount === 'all') {
        btn.classList.add('active', 'bg-[#ad986c]', 'text-white');
        btn.classList.remove('bg-gray-100', 'text-gray-700');
      }
    });

    // Clear checkboxes
    document.querySelectorAll('input[name="product"]').forEach(cb => cb.checked = false);
    document.querySelectorAll('input[name="countryEvent"]').forEach(cb => cb.checked = false);
    document.querySelectorAll('input[name="venue"]').forEach(cb => cb.checked = false);
    
    // Clear inputs
    document.getElementById('priceMin').value = '';
    document.getElementById('priceMax').value = '';
    document.getElementById('dateFrom').value = '';
    document.getElementById('dateTo').value = '';

    // Reset sort
    sortBySelect.value = 'date-asc';

    applyFilters();
  }

  // Update URL with filter params
  function updateURL() {
    const params = new URLSearchParams();
    
    if (filters.searchQuery) {
      params.set('search', filters.searchQuery);
    }
    if (filters.productTypes.size > 0) {
      params.set('products', [...filters.productTypes].join(','));
    }
    if (filters.hideSoldOut) {
      params.set('hideSoldOut', 'true');
    }
    if (filters.discountCode !== 'all') {
      params.set('discount', filters.discountCode);
    }
    if (filters.countryEvents.size > 0) {
      params.set('countries', [...filters.countryEvents].join(','));
    }
    if (filters.venues.size > 0) {
      params.set('venues', [...filters.venues].join(','));
    }
    if (filters.month) {
      params.set('month', filters.month);
    }
    if (filters.priceMin !== null) {
      params.set('minPrice', filters.priceMin);
    }
    if (filters.priceMax !== null) {
      params.set('maxPrice', filters.priceMax);
    }
    if (filters.dateFrom !== null) {
      params.set('dateFrom', filters.dateFrom);
    }
    if (filters.dateTo !== null) {
      params.set('dateTo', filters.dateTo);
    }

    const newURL = params.toString() ? `${window.location.pathname}?${params}` : window.location.pathname;
    window.history.replaceState({}, '', newURL);
  }

  // Restore filters from URL
  function restoreFiltersFromURL() {
    const params = new URLSearchParams(window.location.search);
    
    console.log('ðŸ”— [final-call-2026] URL parameters:', window.location.search);
    console.log('ðŸ”— [final-call-2026] All params:', Object.fromEntries(params.entries()));
    
    // Restore search
    const search = params.get('search');
    if (search) {
      filters.searchQuery = search;
      document.getElementById('searchInput').value = search;
    }
    
    // Restore product checkboxes
    const products = params.get('products');
    if (products) {
      products.split(',').forEach(product => {
        filters.productTypes.add(product);
        const checkbox = document.querySelector(`input[name="product"][value="${product}"]`);
        if (checkbox) checkbox.checked = true;
      });
    }
    
    // Restore hide sold out
    const hideSoldOut = params.get('hideSoldOut');
    if (hideSoldOut === 'true') {
      filters.hideSoldOut = true;
      document.getElementById('hideSoldOut').checked = true;
    }
    
    // Restore discount code pill
    const discount = params.get('discount');
    if (discount) {
      filters.discountCode = discount;
      document.querySelectorAll('.discount-filter-btn').forEach(btn => {
        btn.classList.remove('active', 'bg-[#ad986c]', 'text-white');
        btn.classList.add('bg-gray-100', 'text-gray-700');
        if (btn.dataset.discount === discount) {
          btn.classList.add('active', 'bg-[#ad986c]', 'text-white');
          btn.classList.remove('bg-gray-100', 'text-gray-700');
        }
      });
    }
    
    // Restore countries (using countryEvents)
    const countries = params.get('countries');
    if (countries) {
      countries.split(',').forEach(country => {
        filters.countryEvents.add(country);
        const checkbox = document.querySelector(`input[name="countryEvent"][value="${country}"]`);
        if (checkbox) checkbox.checked = true;
      });
    }

    // Restore price range
    const minPrice = params.get('minPrice');
    const maxPrice = params.get('maxPrice');
    if (minPrice) {
      filters.priceMin = parseInt(minPrice);
      document.getElementById('priceMin').value = minPrice;
    }
    if (maxPrice) {
      filters.priceMax = parseInt(maxPrice);
      document.getElementById('priceMax').value = maxPrice;
    }

    // Restore dates
    const dateFrom = params.get('dateFrom');
    const dateTo = params.get('dateTo');
    if (dateFrom) {
      filters.dateFrom = dateFrom;
      document.getElementById('dateFrom').value = dateFrom;
    }
    if (dateTo) {
      filters.dateTo = dateTo;
      document.getElementById('dateTo').value = dateTo;
    }

    // Restore venues (from homepage search and checkbox filters)
    const venues = params.get('venues');
    if (venues) {
      venues.split(',').forEach(venue => {
        filters.venues.add(venue);
        // Check the checkbox if it exists (for sidebar filters)
        const checkbox = document.querySelector(`input[name="venue"][value="${venue}"]`);
        if (checkbox) checkbox.checked = true;
      });
      console.log('ðŸ¨ [final-call-2026] Restored venue filter from URL:', venues);
      console.log('ðŸ¨ [final-call-2026] Venue filter set contains:', [...filters.venues]);
    }

    // Restore month (from homepage search)
    const month = params.get('month');
    if (month) {
      filters.month = month;
      console.log('ðŸ“… [final-call-2026] Restored month filter from URL:', month);
    }

    // Apply filters if any were restored
    if (search || products || hideSoldOut || discount || countries || minPrice || maxPrice || dateFrom || dateTo || venues || month) {
      applyFilters();
    }
  }

  // Debounce utility
  function debounce(func, wait) {
    let timeout;
    return function executedFunction(...args) {
      const later = () => {
        clearTimeout(timeout);
        func(...args);
      };
      clearTimeout(timeout);
      timeout = setTimeout(later, wait);
    };
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>

