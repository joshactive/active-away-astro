              </div>
              
              {/* Card Content */}
              <div class="p-6">
                {/* Status Badge */}
                <div class={`inline-block px-3 py-1 rounded-full text-xs font-inter font-semibold mb-3 ${event.statusClass}`}>
                  {event.statusBadge}
                </div>
                
                <a href={event.venueLink} class="block relative z-10">
                  <h3 class="text-xl font-playfair font-semibold text-gray-900 mb-3 leading-tight hover:text-[#ad986c] transition-colors">
                    {event.title}
                  </h3>
                </a>
                
                <div class="space-y-2 mb-4">
                  {/* Date */}
                  {event.dateText && (
                    <div class="flex items-center gap-2 text-sm text-gray-600 font-inter">
                      <svg class="w-4 h-4 flex-shrink-0 text-[#ad986c]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v14a2 2 0 002 2z" />
                      </svg>
                      {event.dateText}
                    </div>
                  )}
                  
                  {/* Country Events */}
                  {event.countryEvents && (
