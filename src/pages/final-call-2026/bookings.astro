// Final Call 2026 Bookings Page - Hardcoded page with FinalCall26 discount filters
export const prerender = true;

import BaseLayout from '../../layouts/BaseLayout.astro';
import { getStrapiImageAttrs } from '../../utils/cloudflareImages.js';
import WaitingListModal from '../../components/WaitingListModal.astro';

// Fetch all future events
let eventsData = { events: [], metadata: { total: 0, countries: [], countryEvents: [], priceRange: { min: 0, max: 5000 }, productTypes: [], discountCodes: [] } };

try {
  const today = new Date();
  today.setHours(0, 0, 0, 0);
  const todayISO = today.toISOString().split('T')[0];
  
  const { fetchAPI, getStrapiImageData, normalizeBookingLink } = await import('../../utils/strapi.js');
  
  // Fetch all events (paginated to handle >100 events)
  let allEventsRaw = [];
  let page = 1;
  let hasMore = true;
  
  while (hasMore) {
    const data = await fetchAPI(`/events?filters[dateFrom][$gte]=${todayISO}&populate=*&sort=dateFrom:asc&pagination[page]=${page}&pagination[pageSize]=100`);
    
    if (data && data.data && data.data.length > 0) {
      allEventsRaw = [...allEventsRaw, ...data.data];
      page++;
      
      // If we got less than 100, we've reached the end
      if (data.data.length < 100) {
        hasMore = false;
      }
    } else {
      hasMore = false;
    }
  }
  
  console.log(`ðŸŽ¯ [final-call-2026] Fetched ${allEventsRaw.length} total future events`);
  
  if (allEventsRaw.length > 0) {
    const events = allEventsRaw.map(item => {
      const event = item.attributes || item;
      const featuredImage = event.featuredImage ? getStrapiImageData(event.featuredImage) : null;
      
      // Determine status
      const isSoldOut = event.isSoldOut || event.status?.toLowerCase() === 'sold out';
      const spotsLeft = event.spotsLeft || 0;
      
      let statusBadge = 'Available';
      let statusClass = 'bg-green-100 text-green-800';
      
      if (isSoldOut) {
        statusBadge = 'Sold Out';
        statusClass = 'bg-red-100 text-red-800';
      } else if (spotsLeft > 0 && spotsLeft <= 5) {
        statusBadge = `${spotsLeft} spots left`;
        statusClass = 'bg-orange-100 text-orange-800';
      } else if (spotsLeft > 5) {
        statusBadge = 'Available';
        statusClass = 'bg-green-100 text-green-800';
      }
      
      // Parse price to ensure it's a number
      let price = event.price || event.singleOccupancyFrom || 0;
      if (typeof price === 'string') {
        price = parseFloat(price.replace(/[^0-9.]/g, '')) || 0;
      }
      
      return {
        id: item.id,
        title: event.title || '',
        dateText: event.dateText || '',
        dateFrom: event.dateFrom || '',
        dateUntil: event.dateUntil || '',
        location: event.location || event.country || '',
        country: event.country || '',
        countryEvents: event.countryEvents || event.country || '',
        venue_plain_text: event.venue_plain_text || '',
        price: price,
        singleOccupancyPriceEvent: event.singleOccupancyPriceEvent || null,
        product: event.product || '',
        FinalCall26: event.FinalCall26 || '',
        bookingLink: normalizeBookingLink(event.bookingLink),
        venueLink: event.venueLink || '#',
        buttonText: event.buttonText || 'Book Now',
        buttonColour: event.buttonColour || '#ad986c',
        isSoldOut,
        statusBadge,
        statusClass,
        image: featuredImage?.url || null,
        imageAlt: featuredImage?.alt || event.title || 'Event image'
      };
    });
    
    // Extract unique countries
    const countries = [...new Set(events.map(e => e.country).filter(Boolean))].sort();
    
    // Extract unique countryEvents
    const countryEvents = [...new Set(events.map(e => e.countryEvents).filter(Boolean))].sort();
    
    // Extract unique venues (plain text)
    const venueList = [...new Set(events.map(e => e.venue_plain_text).filter(Boolean))].sort();
    
    // Extract unique product types
    const productTypes = [...new Set(events.map(e => e.product).filter(Boolean))].sort();
    
    // Extract unique FinalCall26 discount codes
    const discountCodes = [...new Set(events.map(e => e.FinalCall26).filter(Boolean))].sort();
    
    // Extract price range
    const prices = events.map(e => e.price).filter(Boolean);
    const priceRange = prices.length > 0 ? {
      min: Math.min(...prices),
      max: Math.max(...prices)
    } : { min: 0, max: 5000 };
    
    eventsData = {
      events,
      metadata: {
        total: events.length,
        countries,
        countryEvents,
        venueList,
        productTypes,
        discountCodes,
        priceRange
      }
    };
    
    console.log(`ðŸŽ¯ [final-call-2026] Fetched ${events.length} future events`);
    console.log(`ðŸ’° Discount codes: ${discountCodes.join(', ')}`);
  }
} catch (error) {
  console.error('[final-call-2026] Error fetching data:', error.message);
}

const { events, metadata } = eventsData;
const EVENT_IMAGE_QUALITY = 60;

// Hardcoded page content for Final Call 2026
const heroTitle = 'Final Call 2026';
const heroSubtitle = 'Exclusive final call discounts on our 2026 events. Filter by discount amount to find the best deals on your next event,';
const heroKicker = 'Booking';
const heroBackgroundImage = 'https://activeaway.com/cdn-cgi/imagedelivery/-aT8Z2F9gGvZ9fdofZcCaQ/76c107e6-013a-4427-3e90-74b0824ac200/public';
const heroBackgroundImageAlt = 'Final Call 2026 Events';

// Hardcoded SEO fields
const pageTitle = 'Final Call 2026 - Exclusive Event Discounts | Active Away';
const pageDescription = 'Get exclusive final call discounts on our 2026 tennis, padel, pickleball, and ski events. Limited availability - book now and save!';
const metaImage = 'https://activeaway.com/cdn-cgi/imagedelivery/-aT8Z2F9gGvZ9fdofZcCaQ/1358282a-64e4-4505-ee11-7c21d05cf000/public';
const metaImageAlt = 'Final Call 2026 - Exclusive Event Discounts';
const metaImageWidth = 1200;
const metaImageHeight = 630;
const keywords = 'final call, event discounts, tennis holidays 2026, padel holidays, pickleball events, ski holidays, last minute deals';
const canonicalURL = 'https://activeaway.com/final-call-2026/bookings';
