---
// Junior Tennis Camp Archive Page - Shows all junior tennis camps
export const prerender = true;

import BaseLayout from '../../layouts/BaseLayout.astro';
import { getJuniorTennisCamps } from '../../utils/strapi.js';
import { getStrapiImageAttrs } from '../../utils/cloudflareImages.js';

// Fetch all junior tennis camps with events
let juniorCampsData = { camps: [], metadata: { total: 0, courtSurfaces: [], priceRange: { min: 0, max: 5000 }, availableDates: [] } };

try {
  const allCamps = await getJuniorTennisCamps(1, 100);
  
  // Filter: only show camps with displayOnFrontEnd = true
  const visibleCamps = allCamps.filter(c => c.displayOnFrontEnd === true);
  console.log(`ðŸ‘¦ [junior-tennis-camp archive] Filtered to ${visibleCamps.length} visible camps (out of ${allCamps.length} total)`);
  
  // Fetch all events for junior tennis camps
  const today = new Date();
  today.setHours(0, 0, 0, 0);
  const todayISO = today.toISOString().split('T')[0];
  
  // Get unique values from visible camps
  const uniqueValues = [...new Set(visibleCamps.map(c => c.uniqueValue).filter(Boolean))];
  
  // Fetch events for all junior tennis camps
  let allEvents = [];
  if (uniqueValues.length > 0) {
    const { fetchAPI } = await import('../../utils/strapi.js');
    const eventsData = await fetchAPI(`/events?filters[dateUntil][$gte]=${todayISO}&pagination[pageSize]=100&sort=dateFrom:asc`);
    
    if (eventsData && eventsData.data) {
      allEvents = eventsData.data.map(item => {
        const event = item.attributes || item;
        return {
          id: item.id,
          uniqueValue: event.uniqueValue,
          dateFrom: event.dateFrom,
          dateUntil: event.dateUntil
        };
      });
    }
  }
  
  // Create map of uniqueValue to events
  const eventsByUniqueValue = {};
  allEvents.forEach(event => {
    if (event.uniqueValue) {
      if (!eventsByUniqueValue[event.uniqueValue]) {
        eventsByUniqueValue[event.uniqueValue] = [];
      }
      eventsByUniqueValue[event.uniqueValue].push(event);
    }
  });
  
  // Associate events with camps
  const allEventDates = [];
  visibleCamps.forEach(camp => {
    if (camp.uniqueValue && eventsByUniqueValue[camp.uniqueValue]) {
      camp.events = eventsByUniqueValue[camp.uniqueValue];
      camp.eventDates = camp.events.map(e => e.dateFrom).filter(Boolean);
    } else {
      camp.events = [];
      camp.eventDates = [];
    }
  });
  
  // Collect all unique event dates
  allEvents.forEach(event => {
    if (event.dateFrom) allEventDates.push(event.dateFrom);
    if (event.dateUntil) allEventDates.push(event.dateUntil);
  });
  const uniqueDates = [...new Set(allEventDates)].sort();
  
  // Extract court surfaces
  const courtSurfaces = [...new Set(visibleCamps.map(c => c.tennisCourtSurface).filter(Boolean))].sort();
  
  // Extract price range
  const prices = visibleCamps.map(c => c.price).filter(Boolean);
  const priceRange = prices.length > 0 ? {
    min: Math.min(...prices),
    max: Math.max(...prices)
  } : { min: 0, max: 5000 };
  
  juniorCampsData = {
    camps: visibleCamps,
    metadata: {
      total: visibleCamps.length,
      courtSurfaces,
      priceRange,
      availableDates: uniqueDates
    }
  };
  
  console.log(`ðŸ‘¦ [junior-tennis-camp archive] Showing ${visibleCamps.length} junior tennis camps (displayOnFrontEnd = true)`);
  console.log(`ðŸ”— Matched ${visibleCamps.filter(c => c.events && c.events.length > 0).length} camps with events`);
  console.log(`ðŸŽ¾ Court surfaces: ${courtSurfaces.join(', ')}`);
  console.log(`ðŸ“… Available dates: ${uniqueDates.length}`);
} catch (error) {
  console.error('[junior-tennis-camp archive] Error fetching data:', error.message);
}

const { camps, metadata } = juniorCampsData;
const CAMP_IMAGE_QUALITY = 60;

// Hardcoded hero content (PLACEHOLDER - update with final content)
const heroTitle = 'Discover Our Junior Tennis Camps';
const heroSubtitle = 'Exciting junior tennis camps designed to develop young players\' skills while making lasting friendships. Expert coaching in inspiring locations.';
const heroKicker = 'JUNIOR TENNIS CAMPS';
const heroBackgroundImage = 'https://activeaway.com/cdn-cgi/imagedelivery/-aT8Z2F9gGvZ9fdofZcCaQ/126feceb-478c-4961-9aa3-0640510f3d00/public';

// SEO
const pageTitle = 'Junior Tennis Camps - Active Away';
const pageDescription = 'Explore our junior tennis camps across the world. Filter by court surface, price, and available dates to find the perfect camp for your child.';
const canonicalURL = 'https://activeaway.com/junior-tennis-camp';
