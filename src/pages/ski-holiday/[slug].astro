---
// Dynamic route for individual ski holidays
export const prerender = true;

import HolidayDetail from '../../components/HolidayDetail.astro';
import { getSkiHolidays, getSkiHolidayBySlug, getSkiHolidayNestedData, getSkiHolidaySEO, getEventsByUniqueValue } from '../../utils/strapi.js';

// Generate static paths for all ski holidays
export async function getStaticPaths() {
  const skiHolidays = await getSkiHolidays(1, 100);
  
  return skiHolidays.map((holiday) => ({
    params: { slug: holiday.slug },
    props: { 
      slug: holiday.slug,
      id: holiday.strapiId,
      documentId: holiday.documentId
    }
  }));
}

const { slug } = Astro.params;
const { id, documentId } = Astro.props;
const fallbackIdentifiers = { id, documentId };
console.log(`‚õ∑Ô∏è [${slug}] Static props identifiers:`, fallbackIdentifiers);

// Fetch the specific ski holiday data
let holidayData = null;
try {
  holidayData = await getSkiHolidayBySlug(slug, fallbackIdentifiers);
  if (holidayData) {
    console.log(`‚õ∑Ô∏è [${slug}] Ski holiday data fetched successfully`);
  } else {
    console.warn(`‚õ∑Ô∏è [${slug}] Ski holiday data not found after lookup`);
  }
} catch (error) {
  console.error(`[${slug}] Error fetching ski holiday:`, error.message);
}

// If no data found, show 404
if (!holidayData) {
  return Astro.redirect('/404');
}

// SEPARATE API CALL: Fetch nested data (rooms.roomGallery, tripImages)
// This is required for Strapi v5's nested population
try {
  const nestedData = await getSkiHolidayNestedData(slug);
  if (nestedData) {
    // Merge nested data into holidayData
    if (nestedData.rooms && nestedData.rooms.length > 0) {
      holidayData.rooms = nestedData.rooms;
    }
    if (nestedData.tripImages && nestedData.tripImages.length > 0) {
      holidayData.tripImages = nestedData.tripImages;
    }
    console.log(`üè® [${slug}] Nested data merged: ${nestedData.rooms?.length || 0} rooms, ${nestedData.tripImages?.length || 0} trip images`);
  }
} catch (error) {
  console.error(`[${slug}] Error fetching nested data:`, error.message);
}

// SEPARATE API CALL: Fetch SEO data with metaImage
// This is required for Strapi v5's nested population of seo.metaImage
try {
  const seoData = await getSkiHolidaySEO(slug);
  if (seoData) {
    // Merge SEO data into holidayData
    holidayData.seo = seoData;
    console.log(`üìÑ [${slug}] SEO data merged: ${seoData.metaTitle || 'No title'}, metaImage: ${seoData.metaImage ? 'Yes' : 'No'}`);
  }
} catch (error) {
  console.error(`[${slug}] Error fetching SEO data:`, error.message);
}

// Fetch random other ski destinations (excluding current one)
let similarHolidays = [];
try {
  const allHolidays = await getSkiHolidays(1, 50);
  
  // Filter: exclude current holiday AND only show those with displayOnFrontEnd = true
  const otherHolidays = allHolidays.filter(h => 
    h.slug !== slug && h.displayOnFrontEnd === true
  );
  
  // Randomize and select 3 destinations
  if (otherHolidays.length > 0) {
    const shuffled = [...otherHolidays];
    for (let i = shuffled.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
    }
    similarHolidays = shuffled.slice(0, 3);
    console.log(`üé≤ Selected ${similarHolidays.length} random ski destinations from ${otherHolidays.length} available`);
  }
} catch (error) {
  console.error('Error fetching other ski destinations:', error);
}

// Fetch events matching this ski holiday's uniqueValue
let matchingEvents = [];
try {
  if (holidayData.uniqueValue) {
    console.log(`‚õ∑Ô∏è Fetching events for ski holiday uniqueValue: "${holidayData.uniqueValue}"`);
    matchingEvents = await getEventsByUniqueValue(holidayData.uniqueValue);
    console.log(`‚õ∑Ô∏è Found ${matchingEvents.length} matching event(s)`);
  } else {
    console.warn(`‚ö†Ô∏è Ski holiday "${slug}" has no uniqueValue set`);
  }
} catch (error) {
  console.error('Error fetching events for ski holiday:', error);
}
---

<HolidayDetail 
  holidayData={holidayData}
  holidayType="ski-holiday"
  matchingEvents={matchingEvents}
  similarHolidays={similarHolidays}
  slug={slug}
/>

