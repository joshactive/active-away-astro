---
// Dynamic route for individual padel holidays
export const prerender = true;

import HolidayDetail from '../../components/HolidayDetail.astro';
import { getPadelTennisHolidays, getPadelHolidayBySlug, getPadelHolidayNestedData, getPadelHolidaySEO, getEventsByUniqueValue, getProductReviews } from '../../utils/strapi.js';

// Generate static paths for all padel holidays
export async function getStaticPaths() {
  const padelHolidays = await getPadelTennisHolidays(1, 100);
  
  return padelHolidays.map((holiday) => ({
    params: { slug: holiday.slug },
    props: { 
      slug: holiday.slug,
      id: holiday.strapiId,
      documentId: holiday.documentId
    }
  }));
}

const { slug } = Astro.params;
const { id, documentId } = Astro.props;
const fallbackIdentifiers = { id, documentId };
console.log(`üè∏ [${slug}] Static props identifiers:`, fallbackIdentifiers);

// Fetch the specific padel holiday data
let holidayData = null;
try {
  holidayData = await getPadelHolidayBySlug(slug, fallbackIdentifiers);
  if (holidayData) {
    console.log(`üè∏ [${slug}] Padel holiday data fetched successfully`);
  } else {
    console.warn(`üè∏ [${slug}] Padel holiday data not found after lookup`);
  }
} catch (error) {
  console.error(`[${slug}] Error fetching padel holiday:`, error.message);
}

// If no data found, show 404
if (!holidayData) {
  return Astro.redirect('/404');
}

// SEPARATE API CALL: Fetch nested data (rooms.roomGallery, tripImages)
try {
  const nestedData = await getPadelHolidayNestedData(slug);
  if (nestedData) {
    if (nestedData.rooms && nestedData.rooms.length > 0) {
      holidayData.rooms = nestedData.rooms;
    }
    if (nestedData.tripImages && nestedData.tripImages.length > 0) {
      holidayData.tripImages = nestedData.tripImages;
    }
    console.log(`üè® [${slug}] Nested data merged: ${nestedData.rooms?.length || 0} rooms, ${nestedData.tripImages?.length || 0} trip images`);
  }
} catch (error) {
  console.error(`[${slug}] Error fetching nested data:`, error.message);
}

// SEPARATE API CALL: Fetch SEO data with metaImage
try {
  const seoData = await getPadelHolidaySEO(slug);
  if (seoData) {
    holidayData.seo = seoData;
    console.log(`üìÑ [${slug}] SEO data merged: ${seoData.metaTitle || 'No title'}, metaImage: ${seoData.metaImage ? 'Yes' : 'No'}`);
  }
} catch (error) {
  console.error(`[${slug}] Error fetching SEO data:`, error.message);
}

// Fetch random other padel destinations (excluding current one)
let similarHolidays = [];
try {
  const allHolidays = await getPadelTennisHolidays(1, 50);
  
  // Filter: exclude current holiday AND only show those with displayOnFrontEnd = true
  const otherHolidays = allHolidays.filter(h => 
    h.slug !== slug && h.displayOnFrontEnd === true
  );
  
  // Randomize and select 3 destinations
  if (otherHolidays.length > 0) {
    const shuffled = [...otherHolidays];
    for (let i = shuffled.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
    }
    similarHolidays = shuffled.slice(0, 3);
    console.log(`üé≤ Selected ${similarHolidays.length} random padel destinations from ${otherHolidays.length} available`);
  }
} catch (error) {
  console.error('Error fetching other padel destinations:', error);
}

// Fetch events matching this padel holiday's uniqueValue
let matchingEvents = [];
try {
  if (holidayData.uniqueValue) {
    console.log(`üè∏ Fetching events for padel holiday uniqueValue: "${holidayData.uniqueValue}"`);
    matchingEvents = await getEventsByUniqueValue(holidayData.uniqueValue);
    console.log(`üè∏ Found ${matchingEvents.length} matching event(s)`);
  } else {
    console.warn(`‚ö†Ô∏è Padel holiday "${slug}" has no uniqueValue set`);
  }
} catch (error) {
  console.error('Error fetching events for padel holiday:', error);
}

// Fetch product reviews if uniqueValue exists
let productReviews = [];
try {
  if (holidayData.uniqueValue) {
    console.log(`‚≠ê Debug - Attempting to fetch reviews for uniqueValue: "${holidayData.uniqueValue}"`);
    productReviews = await getProductReviews(holidayData.uniqueValue);
    console.log(`‚≠ê Debug - Fetched reviews count: ${productReviews.length}`);
    
    if (productReviews.length > 0) {
      holidayData.productReviews = productReviews;
      console.log(`‚≠ê [${slug}] Found ${productReviews.length} reviews matching uniqueValue "${holidayData.uniqueValue}"`);
    } else {
      console.log(`‚≠ê [${slug}] No reviews found for uniqueValue "${holidayData.uniqueValue}"`);
    }
  } else {
    console.log(`‚≠ê Debug - Skipping review fetch because uniqueValue is missing`);
  }
} catch (error) {
  console.error('Error fetching reviews:', error);
}
---

<HolidayDetail 
  holidayData={holidayData}
  holidayType="padel-tennis-holiday"
  matchingEvents={matchingEvents}
  similarHolidays={similarHolidays}
  slug={slug}
/>

