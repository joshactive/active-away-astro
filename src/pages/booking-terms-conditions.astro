  <script is:inline>
    if (typeof window !== 'undefined') {
      const initTermsAccordions = () => {
        const accordions = document.querySelectorAll('.terms-accordion');
        accordions.forEach((accordion) => {
          const header = accordion.querySelector('.terms-accordion-header');
          if (header) {
            header.addEventListener('click', () => toggleTermsAccordion(accordion));
          }
        });

        const tocLinks = document.querySelectorAll('[data-terms-toc] a[href^="#"]');
        tocLinks.forEach((link) => {
          link.addEventListener('click', () => {
            const targetId = link.getAttribute('href')?.replace('#', '');
            if (!targetId) return;
            const targetAccordion = document.getElementById(targetId);
            if (!targetAccordion) return;
            setTimeout(() => openTermsAccordion(targetAccordion), 150);
          });
        });
      };

      const toggleTermsAccordion = (accordion) => {
        if (!accordion) return;
        const isOpen = accordion.classList.contains('open');
        const parent = accordion.parentElement;

        if (parent) {
          parent.querySelectorAll('.terms-accordion').forEach((item) => {
            if (item !== accordion) {
              collapseTermsAccordion(item);
            }
          });
        }

        if (isOpen) {
          collapseTermsAccordion(accordion);
        } else {
          openTermsAccordion(accordion);
        }
      };

      const openTermsAccordion = (accordion) => {
        const content = accordion.querySelector('.terms-accordion-content');
        const arrow = accordion.querySelector('.terms-accordion-arrow');
        const header = accordion.querySelector('.terms-accordion-header');

        accordion.classList.add('open', 'shadow-lg');
        accordion.classList.remove('shadow-sm');

        if (content) {
          content.style.maxHeight = content.scrollHeight + 'px';
          content.style.opacity = '1';
        }

        if (arrow) {
          arrow.classList.add('rotate-180');
        }

        if (header) {
          header.setAttribute('aria-expanded', 'true');
        }
      };

      const collapseTermsAccordion = (accordion) => {
        const content = accordion.querySelector('.terms-accordion-content');
        const arrow = accordion.querySelector('.terms-accordion-arrow');
        const header = accordion.querySelector('.terms-accordion-header');

        accordion.classList.remove('open', 'shadow-lg');
        accordion.classList.add('shadow-sm');

        if (content) {
          content.style.maxHeight = '0px';
          content.style.opacity = '0';
        }

        if (arrow) {
          arrow.classList.remove('rotate-180');
        }

        if (header) {
          header.setAttribute('aria-expanded', 'false');
        }
      };

      document.addEventListener('DOMContentLoaded', initTermsAccordions);
    }
  </script>
