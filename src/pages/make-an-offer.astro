// Make an Offer Page - Shows events with makeOffer enabled
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';
import { getStrapiImageAttrs } from '../utils/cloudflareImages.js';
import MakeOfferModal from '../components/MakeOfferModal.astro';

// Hardcoded page content (not from Strapi)
const heroTitle = 'Make an Offer';
const heroSubtitle = 'Browse our selected events and make an offer. We\'ll review your proposal and get back to you as soon as possible.';
const heroKicker = 'SPECIAL OFFERS';
const heroBackgroundImage = 'https://activeaway.com/cdn-cgi/imagedelivery/-aT8Z2F9gGvZ9fdofZcCaQ/50fcbee2-32c8-4e9f-8215-d3fdb9df0d00/public';
const heroBackgroundImageAlt = 'Tennis events with special offers';

// Hardcoded SEO content
const pageTitle = 'Make an Offer | Active Away';
const pageDescription = 'Make an offer on selected tennis, padel, pickleball, and ski events. Browse available events and submit your proposal for exclusive pricing.';
const metaImage = 'https://activeaway.com/cdn-cgi/imagedelivery/-aT8Z2F9gGvZ9fdofZcCaQ/1755101c-bf80-4e86-9d6d-fecb781c4a00/public?width=1200&height=630&fit=cover&format=auto&quality=85';
const metaImageAlt = 'Make an offer on Active Away tennis and sports holidays';
const metaImageWidth = 1200;
const metaImageHeight = 630;
const keywords = 'make an offer, tennis holiday deals, discounted tennis holidays, padel holiday offers, sports holiday discounts, Active Away offers, exclusive tennis pricing';
const canonicalURL = 'https://activeaway.com/make-an-offer';

// Fetch all future events with makeOffer enabled
let eventsData = { events: [], metadata: { total: 0, countries: [], countryEvents: [], venueList: [], priceRange: { min: 0, max: 5000 }, productTypes: [] } };

try {
  const today = new Date();
  today.setHours(0, 0, 0, 0);
  const todayISO = today.toISOString().split('T')[0];
  
  const { fetchAPI, getStrapiImageData, normalizeBookingLink } = await import('../utils/strapi.js');
  
  // Fetch all events with makeOffer enabled (paginated to handle >100 events)
  let allEventsRaw = [];
  let page = 1;
  let hasMore = true;
  
  while (hasMore) {
    const data = await fetchAPI(`/events?filters[dateFrom][$gte]=${todayISO}&filters[makeOffer][$eq]=true&populate=*&sort=dateFrom:asc&pagination[page]=${page}&pagination[pageSize]=100`);
    
    if (data && data.data && data.data.length > 0) {
      allEventsRaw = [...allEventsRaw, ...data.data];
      page++;
      
      // If we got less than 100, we've reached the end
      if (data.data.length < 100) {
        hasMore = false;
      }
    } else {
      hasMore = false;
    }
  }
  
  console.log(`üè∑Ô∏è [make-an-offer] Fetched ${allEventsRaw.length} total makeOffer events`);
  
  if (allEventsRaw.length > 0) {
    const events = allEventsRaw.map(item => {
      const event = item.attributes || item;
      const featuredImage = event.featuredImage ? getStrapiImageData(event.featuredImage) : null;
      
      // Determine status
      const isSoldOut = event.isSoldOut || event.status?.toLowerCase() === 'sold out';
      const spotsLeft = event.spotsLeft || 0;
      
      let statusBadge = 'Available';
      let statusClass = 'bg-green-100 text-green-800';
      
      if (isSoldOut) {
        statusBadge = 'Sold Out';
        statusClass = 'bg-red-100 text-red-800';
      } else if (spotsLeft > 0 && spotsLeft <= 5) {
        statusBadge = `${spotsLeft} spots left`;
        statusClass = 'bg-orange-100 text-orange-800';
      } else if (spotsLeft > 5) {
        statusBadge = 'Available';
        statusClass = 'bg-green-100 text-green-800';
      }
      
      // Parse price to ensure it's a number
      let price = event.price || event.singleOccupancyFrom || 0;
      if (typeof price === 'string') {
        price = parseFloat(price.replace(/[^0-9.]/g, '')) || 0;
      }
      
      return {
        id: item.id,
        title: event.title || '',
        dateText: event.dateText || '',
        dateFrom: event.dateFrom || '',
        dateUntil: event.dateUntil || '',
        location: event.location || event.country || '',
        country: event.country || '',
        countryEvents: event.countryEvents || event.country || '',
        venue_plain_text: event.venue_plain_text || '',
        price: price,
        singleOccupancyPriceEvent: event.singleOccupancyPriceEvent || null,
        product: event.product || '',
        venueLink: event.venueLink || '#',
        isSoldOut,
        statusBadge,
        statusClass,
        image: featuredImage?.url || null,
        imageAlt: featuredImage?.alt || event.title || 'Event image'
      };
    });
    
    // Extract unique countries
    const countries = [...new Set(events.map(e => e.country).filter(Boolean))].sort();
    
    // Extract unique countryEvents
    const countryEvents = [...new Set(events.map(e => e.countryEvents).filter(Boolean))].sort();
    
    // Extract unique venues (plain text)
    const venueList = [...new Set(events.map(e => e.venue_plain_text).filter(Boolean))].sort();
    
    // Extract unique product types
    const productTypes = [...new Set(events.map(e => e.product).filter(Boolean))].sort();
    
    // Extract price range
    const prices = events.map(e => e.price).filter(Boolean);
    const priceRange = prices.length > 0 ? {
      min: Math.min(...prices),
      max: Math.max(...prices)
    } : { min: 0, max: 5000 };
    
    eventsData = {
      events,
      metadata: {
        total: events.length,
        countries,
        countryEvents,
        venueList,
        productTypes,
        priceRange
      }
    };
    
    console.log(`üè∑Ô∏è [make-an-offer] Processed ${events.length} makeOffer events`);
    console.log(`üìä Product types: ${productTypes.join(', ')}`);
  }
} catch (error) {
  console.error('[make-an-offer] Error fetching data:', error.message);
}

const { events, metadata } = eventsData;
const EVENT_IMAGE_QUALITY = 60;
