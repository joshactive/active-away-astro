  <script>
    // How It Works Popup Logic
    const howItWorksBtn = document.getElementById('how-it-works-btn');
    const howItWorksOverlay = document.getElementById('how-it-works-overlay');
    const howItWorksModal = document.getElementById('how-it-works-modal');
    const closeHowItWorksBtn = document.getElementById('close-how-it-works');
    const dismissHowItWorksBtn = document.getElementById('how-it-works-dismiss');
    
    const STORAGE_KEY = 'active_away_make_offer_seen';

    function showHowItWorksPopup() {
      if (!howItWorksOverlay || !howItWorksModal) return;
      
      howItWorksOverlay.classList.remove('hidden');
      howItWorksOverlay.classList.add('flex');
      
      requestAnimationFrame(() => {
        howItWorksOverlay.classList.remove('opacity-0');
        howItWorksModal.classList.remove('scale-95', 'opacity-0');
        howItWorksModal.classList.add('scale-100', 'opacity-100');
      });
      
      document.body.style.overflow = 'hidden';
    }

    function closeHowItWorksPopup() {
      if (!howItWorksOverlay || !howItWorksModal) return;
      
      // Mark as seen
      try {
        localStorage.setItem(STORAGE_KEY, 'true');
      } catch (e) {
        // localStorage not available
      }
      
      howItWorksOverlay.classList.add('opacity-0');
      howItWorksModal.classList.remove('scale-100', 'opacity-100');
      howItWorksModal.classList.add('scale-95', 'opacity-0');
      
      setTimeout(() => {
        howItWorksOverlay.classList.add('hidden');
        howItWorksOverlay.classList.remove('flex');
      }, 300);
      
      document.body.style.overflow = '';
    }

    // Auto-show on page load (only first time)
    function initHowItWorks() {
      // Check if user has seen the popup before
      let hasSeen = false;
      try {
        hasSeen = localStorage.getItem(STORAGE_KEY) === 'true';
      } catch (e) {
        // localStorage not available
      }
      
      if (!hasSeen) {
        // Small delay to let the page render first
        setTimeout(() => {
          showHowItWorksPopup();
        }, 500);
      }
    }

    howItWorksBtn?.addEventListener('click', showHowItWorksPopup);
    closeHowItWorksBtn?.addEventListener('click', closeHowItWorksPopup);
    dismissHowItWorksBtn?.addEventListener('click', closeHowItWorksPopup);

    howItWorksOverlay?.addEventListener('click', (e) => {
      if (e.target === howItWorksOverlay) {
        closeHowItWorksPopup();
      }
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && howItWorksOverlay && !howItWorksOverlay.classList.contains('hidden')) {
        closeHowItWorksPopup();
      }
    });

    // Initialize on page load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initHowItWorks);
    } else {
      initHowItWorks();
    }
  </script>

