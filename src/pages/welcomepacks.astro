---
// Welcomepacks Archive Page - Shows all events as welcome packs
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';
import { getWelcomepacksPageSEO } from '../utils/strapi.js';

// Fetch page content from Strapi
let pageContent = null;
try {
  const { getWelcomepacksPage } = await import('../utils/strapi.js');
  pageContent = await getWelcomepacksPage();
  console.log('ðŸ“¦ [welcomepacks] Page content fetched successfully');
} catch (error) {
  console.warn('[welcomepacks] Could not fetch page content, using defaults:', error.message);
}

// Fetch SEO data from Strapi
let seoData = null;
try {
  seoData = await getWelcomepacksPageSEO();
  if (seoData) {
    console.log('ðŸ“„ [welcomepacks] SEO data fetched successfully');
  }
} catch (error) {
  console.warn('[welcomepacks] Could not fetch SEO data:', error.message);
}

// Fetch all events with plevel=5
let welcomepacksData = { welcomepacks: [], metadata: { total: 0, venues: [], products: [] } };

try {
  const { fetchAPI } = await import('../utils/strapi.js');
  
  // Get today's date for filtering
  const today = new Date();
  today.setHours(0, 0, 0, 0);
  const todayISO = today.toISOString().split('T')[0];
  
  // Fetch all future events (paginated to handle up to 1000 events)
  let allEventsRaw = [];
  let page = 1;
  let hasMore = true;
  const pageSize = 100; // Fetch 100 items per page for efficiency
  
  while (hasMore && allEventsRaw.length < 1000) { // Safety limit of 1000 events
    const data = await fetchAPI(`/events?filters[dateFrom][$gte]=${todayISO}&plevel=5&sort=dateFrom:asc&pagination[page]=${page}&pagination[pageSize]=${pageSize}`);
    
    if (data && data.data && data.data.length > 0) {
      allEventsRaw = [...allEventsRaw, ...data.data];
      
      // Check if there are more pages
      const pagination = data.meta?.pagination;
      if (pagination && pagination.page < pagination.pageCount) {
        page++;
      } else {
        hasMore = false;
      }
    } else {
      hasMore = false;
    }
  }
  
  console.log(`ðŸ“¦ [welcomepacks] Fetched ${allEventsRaw.length} future events (from ${todayISO} onwards)`);
  
  if (allEventsRaw.length > 0) {
    const welcomepacks = allEventsRaw.map(item => {
      // In Strapi 5, data is flat (no attributes wrapper)
      const event = item;
      
      // Debug: Log first event to check structure
      if (item.id === allEventsRaw[0].id) {
        console.log('ðŸ“¦ [welcomepacks] Sample event structure:', {
          id: event.id,
          title: event.title,
          venue_plain_text: event.venue_plain_text,
          product: event.product,
          dateFrom: event.dateFrom
        });
      }
      
      // Format dates as text
      let dateFromText = '';
      let dateUntilText = '';
      
      if (event.dateFrom) {
        const fromDate = new Date(event.dateFrom);
        dateFromText = fromDate.toLocaleDateString('en-GB', { 
          weekday: 'short', 
          day: '2-digit', 
          month: 'long', 
          year: 'numeric' 
        });
      }
      
      if (event.dateUntil) {
        const untilDate = new Date(event.dateUntil);
        dateUntilText = untilDate.toLocaleDateString('en-GB', { 
          weekday: 'short', 
          day: '2-digit', 
          month: 'long', 
          year: 'numeric' 
        });
      }
      
      return {
        id: item.id,
        title: event.title || '',
        dateFrom: event.dateFrom || '',
        dateUntil: event.dateUntil || '',
        dateFromText,
        dateUntilText,
        product: event.product || '',
        venue: event.venue_plain_text || '',
        itineraryUrl: event.itinerary_url || '',
        uniqueValue: event.uniqueValue || ''
      };
    });
    
    // Extract unique venues (filter out empty strings)
    const venues = [...new Set(welcomepacks.map(wp => wp.venue).filter(Boolean))].sort();
    
    console.log(`ðŸ“¦ [welcomepacks] Found ${venues.length} unique venues:`, venues);
    
    // Extract unique product types
    const products = [...new Set(welcomepacks.map(wp => wp.product).filter(Boolean))].sort();
    
    welcomepacksData = {
      welcomepacks,
      metadata: {
        total: welcomepacks.length,
        venues,
        products
      }
    };
    
    console.log(`ðŸ“¦ [welcomepacks] Processed ${welcomepacks.length} welcome packs`);
    console.log(`ðŸ“Š Venues: ${venues.join(', ')}`);
  }
} catch (error) {
  console.error('[welcomepacks] Error fetching data:', error.message);
}

const { welcomepacks, metadata } = welcomepacksData;

// Extract page content with fallbacks
const heroTitle = pageContent?.hero?.title || 'Itineraries';
const heroSubtitle = pageContent?.hero?.subtitle || 'Download your event itineraries here (subject to change)';
const heroKicker = pageContent?.hero?.kicker || 'BOOKING';
const heroBackgroundImage = pageContent?.hero?.backgroundImage?.url || 'https://activeaway.com/cdn-cgi/imagedelivery/-aT8Z2F9gGvZ9fdofZcCaQ/45b69090-1c22-46cd-7f98-086ba71efc00/public';
const heroBackgroundImageAlt = pageContent?.hero?.backgroundImage?.alt || 'Welcome packs and event information';

// Extract SEO fields with fallbacks
const pageTitle = seoData?.metaTitle || pageContent?.seo?.metaTitle || 'Itineraries - Active Away';
const pageDescription = seoData?.metaDescription || pageContent?.seo?.metaDescription || 'Download your event itineraries here (subject to change).';

// Extract meta image URL properly
let metaImage = null;
if (seoData?.metaImage) {
  metaImage = typeof seoData.metaImage === 'string' ? seoData.metaImage : seoData.metaImage.url;
} else if (pageContent?.seo?.metaImage) {
  metaImage = typeof pageContent.seo.metaImage === 'string' ? pageContent.seo.metaImage : pageContent.seo.metaImage.url;
}

const metaImageAlt = seoData?.metaImageAlt || pageContent?.seo?.metaImageAlt || null;
const metaImageWidth = seoData?.metaImageWidth || pageContent?.seo?.metaImageWidth || null;
const metaImageHeight = seoData?.metaImageHeight || pageContent?.seo?.metaImageHeight || null;
const keywords = seoData?.keywords || pageContent?.seo?.keywords || null;
const canonicalURL = seoData?.canonicalURL || pageContent?.seo?.canonicalURL || 'https://activeaway.com/welcomepacks';
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  metaImage={metaImage}
  metaImageAlt={metaImageAlt}
  metaImageWidth={metaImageWidth}
  metaImageHeight={metaImageHeight}
  keywords={keywords}
  canonicalURL={canonicalURL}
>
  <!-- Hero Header Section -->
  <section class="relative w-full h-[400px] sm:h-[500px] lg:h-[600px] overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-[#0D1C4E]/75 via-[#0D1C4E]/60 to-[#0D1C4E]/60 z-10"></div>
    <img 
      src={heroBackgroundImage}
      alt={heroBackgroundImageAlt}
      class="absolute inset-0 w-full h-full object-cover"
      loading="eager"
    />
    
    <div class="relative z-20 container mx-auto max-w-[1400px] px-4 sm:px-10 h-full flex flex-col justify-center items-center text-center">
      <div class="hidden sm:block text-xs sm:text-sm font-inter font-semibold text-gold tracking-[0.2em] uppercase mb-4 sm:mb-6 border-t border-b border-gold/50 py-2 px-6">
        {heroKicker}
      </div>
      <h1 class="text-4xl sm:text-5xl lg:text-7xl font-playfair font-bold text-white mb-6 sm:mb-8 leading-tight max-w-4xl">
        {heroTitle}
      </h1>
      <p class="text-lg sm:text-xl lg:text-2xl font-inter text-gray-100 max-w-3xl leading-relaxed">
        {heroSubtitle}
      </p>
    </div>
  </section>

  <!-- Main Content Section -->
  <section class="w-full bg-white py-12 sm:py-16 lg:py-24">
    <div class="container mx-auto max-w-[1400px] px-4 sm:px-10">
      <div class="flex flex-col lg:flex-row gap-8 lg:gap-12">
        
        <!-- Left Sidebar - Filters -->
        <aside class="w-full lg:w-[320px] flex-shrink-0">
          <div id="filterBar" class="bg-white border border-gray-200 rounded-2xl p-6 shadow-lg lg:sticky lg:top-4">
            <!-- Filter Header -->
            <div class="mb-6 pb-4 border-b border-gray-200">
              <div class="flex items-center justify-between">
                <h3 class="text-base font-playfair font-semibold text-gray-900">Filters</h3>
                <span id="activeFilterCount" class="hidden bg-gold text-white text-xs font-bold px-2.5 py-1 rounded-full">0</span>
              </div>
              <p id="filterStatus" class="text-sm font-inter text-gray-600 mt-1">0 filters selected</p>
            </div>

            <!-- Mobile Filter Toggle -->
            <button 
              id="mobileFilterToggle"
              class="lg:hidden w-full flex items-center justify-between bg-gray-50 hover:bg-gray-100 px-4 py-3 rounded-lg transition-colors mb-4"
            >
              <span class="font-inter font-medium text-gray-900">Show/Hide Filters</span>
              <svg class="w-5 h-5 text-gray-600 transition-transform" id="filterChevron" viewBox="0 0 24 24" fill="none">
                <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>

            <!-- Filters Container -->
            <div id="filtersContainer" class="space-y-6">
              <!-- Search Filter -->
              <div class="filter-group">
                <h4 class="text-base font-inter font-medium text-gray-900 mb-3">Search</h4>
                <div class="relative">
                  <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                  <input 
                    type="text" 
                    id="searchInput"
                    placeholder="Search by title..."
                    class="w-full bg-gray-50 border border-gray-300 rounded-lg pl-10 pr-4 py-2.5 text-sm font-inter text-gray-900 focus:ring-2 focus:ring-gold focus:border-gold transition-all"
                  />
                </div>
              </div>

              <!-- Venue Filter -->
              <div class="filter-group">
                <button class="filter-header w-full flex items-center justify-between py-3 text-left" data-filter="venue">
                  <span class="text-base font-inter font-medium text-gray-900">Venue</span>
                  <svg class="w-5 h-5 text-gray-600 transition-transform" viewBox="0 0 24 24" fill="none">
                    <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </button>
                <div class="filter-content space-y-2 mt-3">
                  {metadata.venues.map(venue => (
                    <label class="flex items-center cursor-pointer group">
                      <input 
                        type="checkbox" 
                        name="venue" 
                        value={venue}
                        class="w-4 h-4 text-gold border-gray-300 rounded focus:ring-gold focus:ring-2"
                      />
                      <span class="ml-3 text-sm font-inter text-gray-700 group-hover:text-gray-900">{venue}</span>
                    </label>
                  ))}
                </div>
              </div>

              <!-- Product Filter -->
              <div class="filter-group">
                <button class="filter-header w-full flex items-center justify-between py-3 text-left" data-filter="product">
                  <span class="text-base font-inter font-medium text-gray-900">Product</span>
                  <svg class="w-5 h-5 text-gray-600 transition-transform" viewBox="0 0 24 24" fill="none">
                    <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </button>
                <div class="filter-content space-y-2 mt-3">
                  {metadata.products.map(product => (
                    <label class="flex items-center cursor-pointer group">
                      <input 
                        type="checkbox" 
                        name="product" 
                        value={product}
                        class="w-4 h-4 text-gold border-gray-300 rounded focus:ring-gold focus:ring-2"
                      />
                      <span class="ml-3 text-sm font-inter text-gray-700 group-hover:text-gray-900">{product}</span>
                    </label>
                  ))}
                </div>
              </div>

              <!-- Date Range Filter -->
              <div class="filter-group">
                <button class="filter-header w-full flex items-center justify-between py-3 text-left" data-filter="dates">
                  <span class="text-base font-inter font-medium text-gray-900">Event Dates</span>
                  <svg class="w-5 h-5 text-gray-600 transition-transform" viewBox="0 0 24 24" fill="none">
                    <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </button>
                <div class="filter-content mt-3">
                  <div class="space-y-2">
                    <input 
                      type="date" 
                      id="dateFrom"
                      placeholder="From"
                      class="w-full bg-gray-50 border border-gray-300 rounded-lg px-3 py-2.5 text-sm font-inter text-gray-900 focus:ring-2 focus:ring-gold focus:border-gold transition-all"
                    />
                    <input 
                      type="date" 
                      id="dateTo"
                      placeholder="To"
                      class="w-full bg-gray-50 border border-gray-300 rounded-lg px-3 py-2.5 text-sm font-inter text-gray-900 focus:ring-2 focus:ring-gold focus:border-gold transition-all"
                    />
                  </div>
                </div>
              </div>

              <!-- Clear Filters Button -->
              <div class="pt-6">
                <button 
                  id="clearFilters"
                  class="w-full px-4 py-2.5 text-sm font-inter font-medium text-gold hover:text-gold-700 border border-gold hover:bg-gold hover:text-white rounded-lg transition-all"
                >
                  Clear All Filters
                </button>
              </div>
            </div>
          </div>
        </aside>

        <!-- Right Content Area -->
        <main class="flex-1 min-w-0">
          <!-- Results Header -->
          <div class="flex items-center justify-between mb-6 pb-4 border-b border-gray-200">
            <div class="text-base sm:text-lg font-inter text-gray-900">
              Showing <span id="filteredCount" class="font-semibold">{welcomepacks.length}</span> of <span class="font-semibold">{metadata.total}</span> itineraries
            </div>
          </div>

          <!-- Welcomepacks Grid -->
          <div id="welcomepacksGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 gap-6">
          {welcomepacks.map((pack, index) => {
          return (
            <div 
              class="welcomepack-card bg-white border-2 border-gray-200 rounded-2xl overflow-hidden shadow-sm hover:shadow-xl hover:border-[#ad986c] transition-all duration-300 hover:-translate-y-1" 
              data-pack-id={pack.id} 
              data-venue={pack.venue}
              data-product={pack.product}
              data-date-from={pack.dateFrom}
              data-unique-value={pack.uniqueValue}
            >
              {/* Card Content */}
              <div class="p-6">
                <h3 class="text-xl font-playfair font-semibold text-gray-900 mb-4 leading-tight">
                  {pack.title}
                </h3>
                
                <div class="space-y-2 mb-4">
                  {/* Date From */}
                  {pack.dateFromText && (
                    <div class="flex items-start gap-2 text-sm text-gray-600 font-inter">
                      <svg class="w-4 h-4 flex-shrink-0 text-[#ad986c] mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v14a2 2 0 002 2z" />
                      </svg>
                      <span><strong>From:</strong> {pack.dateFromText}</span>
                    </div>
                  )}
                  
                  {/* Date Until */}
                  {pack.dateUntilText && (
                    <div class="flex items-start gap-2 text-sm text-gray-600 font-inter">
                      <svg class="w-4 h-4 flex-shrink-0 text-[#ad986c] mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v14a2 2 0 002 2z" />
                      </svg>
                      <span><strong>Until:</strong> {pack.dateUntilText}</span>
                    </div>
                  )}
                  
                  {/* Venue */}
                  {pack.venue && (
                    <div class="flex items-start gap-2 text-sm text-gray-600 font-inter">
                      <svg class="w-4 h-4 flex-shrink-0 text-[#ad986c] mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                      <span>{pack.venue}</span>
                    </div>
                  )}
                  
                  {/* Product */}
                  {pack.product && (
                    <div class="flex items-start gap-2 text-sm text-gray-600 font-inter">
                      <svg class="w-4 h-4 flex-shrink-0 text-[#ad986c] mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V7.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 1H7a2 2 0 00-2 2v16a2 2 0 002 2z" />
                      </svg>
                      <span>{pack.product}</span>
                    </div>
                  )}
                </div>
                
                {/* Button */}
                <div class="pt-4 border-t border-gray-200">
                  {pack.itineraryUrl ? (
                    <a 
                      href={pack.itineraryUrl} 
                      target="_blank"
                      rel="noopener noreferrer"
                      class="block w-full text-center bg-[#ad986c] hover:bg-[#8d7a58] text-white font-inter font-semibold py-3 px-4 rounded-full transition-colors"
                    >
                      Download Itinerary
                    </a>
                  ) : (
                    <a 
                      href="/forms/contact-us" 
                      class="block w-full text-center bg-gray-600 hover:bg-gray-700 text-white font-inter font-semibold py-3 px-4 rounded-full transition-colors"
                    >
                      Contact Us
                    </a>
                  )}
                </div>
              </div>
            </div>
          );
        })}
      </div>

          <!-- Loading Indicator -->
          <div id="loadingIndicator" class="hidden text-center py-12">
            <div class="inline-block w-12 h-12 border-4 border-gray-300 border-t-gold rounded-full animate-spin"></div>
            <p class="mt-4 text-base font-inter text-gray-800">Loading more...</p>
          </div>

          <!-- Empty State -->
          <div id="emptyState" class="hidden text-center py-16">
            <svg class="w-24 h-24 mx-auto text-gray-300 mb-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h3 class="text-xl font-playfair font-semibold text-gray-900 mb-3">No itineraries found</h3>
            <p class="text-base font-inter text-gray-800 leading-relaxed mb-6">Try adjusting your filters to see more results</p>
            <button id="emptyStateClearBtn" class="px-6 py-3 bg-gold hover:bg-gold-700 text-white font-inter font-medium rounded-full transition-all duration-300">
              Clear All Filters
            </button>
          </div>

          <!-- Infinite Scroll Sentinel -->
          <div id="scrollSentinel" class="h-4"></div>

          <!-- End of Results Message -->
          <div id="endMessage" class="hidden text-center py-12">
            <p class="text-gray-600 font-inter">You've reached the end of all itineraries</p>
          </div>
        </main>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .font-inter {
    font-family: 'Inter', sans-serif;
  }
  
  .font-playfair {
    font-family: 'Playfair Display', serif;
  }

  .welcomepack-card {
    transition: all 0.3s ease;
  }

  .welcomepack-card.hidden {
    display: none;
  }

  /* Filter Group Styles */
  .filter-group {
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .filter-group:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .filter-group + .filter-group {
    padding-top: 1.5rem;
  }

  .filter-header {
    border-bottom: 1px solid transparent;
    transition: all 0.2s ease;
  }

  .filter-header:hover {
    background-color: #f9fafb;
    border-radius: 0.5rem;
  }

  .filter-header svg {
    transition: transform 0.3s ease;
  }

  .filter-group.collapsed .filter-header svg {
    transform: rotate(-90deg);
  }

  .filter-group.collapsed .filter-content {
    display: none;
  }

  .animate-spin {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  /* Mobile filter container */
  @media (max-width: 1023px) {
    #filtersContainer {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
    }

    #filtersContainer.show {
      max-height: 2000px;
    }
  }
</style>

<script define:vars={{ initialPacks: welcomepacks, metadata }}>
  // Global state
  let allPacks = [...initialPacks];
  let filteredPacks = [...initialPacks];
  let displayedPacks = [...initialPacks].slice(0, 18);
  let currentPage = 1;
  const pageSize = 18;
  let isLoading = false;
  let hasMorePacks = allPacks.length > displayedPacks.length;

  // Filter state
  const filters = {
    searchQuery: '',
    venues: new Set(),
    products: new Set(),
    dateFrom: null,
    dateTo: null
  };

  // DOM elements
  const packsGrid = document.getElementById('welcomepacksGrid');
  const loadingIndicator = document.getElementById('loadingIndicator');
  const emptyState = document.getElementById('emptyState');
  const endMessage = document.getElementById('endMessage');
  const scrollSentinel = document.getElementById('scrollSentinel');
  const filteredCountEl = document.getElementById('filteredCount');
  const activeFilterCountEl = document.getElementById('activeFilterCount');
  const filterStatusEl = document.getElementById('filterStatus');
  
  // Mobile filter toggle
  const mobileFilterToggle = document.getElementById('mobileFilterToggle');
  const filtersContainer = document.getElementById('filtersContainer');
  const filterChevron = document.getElementById('filterChevron');

  // Initialize
  function init() {
    setupEventListeners();
    setupInfiniteScroll();
    restoreFiltersFromURL();
    
    // Render initial state
    renderPacks();
    updateFilterCount();
  }

  // Setup event listeners
  function setupEventListeners() {
    // Mobile filter toggle
    mobileFilterToggle?.addEventListener('click', () => {
      filtersContainer.classList.toggle('show');
      if (filtersContainer.classList.contains('show')) {
        filterChevron.style.transform = 'rotate(180deg)';
      } else {
        filterChevron.style.transform = 'rotate(0deg)';
      }
    });

    // Filter group collapse/expand
    document.querySelectorAll('.filter-header').forEach(header => {
      header.addEventListener('click', () => {
        const filterGroup = header.parentElement;
        filterGroup.classList.toggle('collapsed');
      });
    });

    // Search input
    document.getElementById('searchInput')?.addEventListener('input', debounce((e) => {
      filters.searchQuery = e.target.value.toLowerCase().trim();
      applyFilters();
    }, 300));

    // Venue checkboxes
    document.querySelectorAll('input[name="venue"]').forEach(checkbox => {
      checkbox.addEventListener('change', (e) => {
        if (e.target.checked) {
          filters.venues.add(e.target.value);
        } else {
          filters.venues.delete(e.target.value);
        }
        applyFilters();
      });
    });

    // Product checkboxes
    document.querySelectorAll('input[name="product"]').forEach(checkbox => {
      checkbox.addEventListener('change', (e) => {
        if (e.target.checked) {
          filters.products.add(e.target.value);
        } else {
          filters.products.delete(e.target.value);
        }
        applyFilters();
      });
    });

    // Date range inputs
    const dateFromInput = document.getElementById('dateFrom');
    const dateToInput = document.getElementById('dateTo');
    
    dateFromInput?.addEventListener('change', (e) => {
      filters.dateFrom = e.target.value || null;
      
      // Auto-set end date to 60 days after start date
      if (filters.dateFrom && dateToInput) {
        const startDate = new Date(filters.dateFrom);
        const endDate = filters.dateTo ? new Date(filters.dateTo) : null;
        
        if (!endDate || endDate <= startDate) {
          const autoEndDate = new Date(startDate);
          autoEndDate.setDate(autoEndDate.getDate() + 60);
          const autoEndDateStr = autoEndDate.toISOString().split('T')[0];
          dateToInput.value = autoEndDateStr;
          filters.dateTo = autoEndDateStr;
        }
      }
      
      applyFilters();
    });

    dateToInput?.addEventListener('change', (e) => {
      filters.dateTo = e.target.value || null;
      applyFilters();
    });

    // Clear filters button
    document.getElementById('clearFilters')?.addEventListener('click', clearAllFilters);
    document.getElementById('emptyStateClearBtn')?.addEventListener('click', clearAllFilters);
  }

  // Apply filters
  function applyFilters() {
    filteredPacks = allPacks.filter(pack => {
      // Search filter
      if (filters.searchQuery && !pack.title.toLowerCase().includes(filters.searchQuery)) {
        return false;
      }

      // Venue filter
      if (filters.venues.size > 0 && !filters.venues.has(pack.venue)) {
        return false;
      }

      // Product filter
      if (filters.products.size > 0 && !filters.products.has(pack.product)) {
        return false;
      }

      // Date range filter
      if (filters.dateFrom || filters.dateTo) {
        const packDate = new Date(pack.dateFrom);
        if (filters.dateFrom && packDate < new Date(filters.dateFrom)) {
          return false;
        }
        if (filters.dateTo && packDate > new Date(filters.dateTo)) {
          return false;
        }
      }

      return true;
    });

    currentPage = 1;
    displayedPacks = filteredPacks.slice(0, pageSize);
    hasMorePacks = filteredPacks.length > displayedPacks.length;
    
    renderPacks();
    updateFilterCount();
    updateURL();
  }

  // Render packs
  function renderPacks() {
    const cards = packsGrid.querySelectorAll('.welcomepack-card');
    
    // Hide all cards first
    cards.forEach(card => {
      card.classList.add('hidden');
    });

    // Show filtered cards
    let foundCount = 0;
    displayedPacks.forEach(pack => {
      const card = packsGrid.querySelector(`[data-pack-id="${pack.id}"]`);
      if (card) {
        card.classList.remove('hidden');
        foundCount++;
      }
    });

    // Update counts
    filteredCountEl.textContent = filteredPacks.length;

    // Show/hide empty state
    if (filteredPacks.length === 0) {
      emptyState.classList.remove('hidden');
      endMessage.classList.add('hidden');
    } else {
      emptyState.classList.add('hidden');
      if (!hasMorePacks) {
        endMessage.classList.remove('hidden');
      } else {
        endMessage.classList.add('hidden');
      }
    }
  }

  // Setup infinite scroll
  function setupInfiniteScroll() {
    const observer = new IntersectionObserver(
      (entries) => {
        if (entries[0].isIntersecting && hasMorePacks && !isLoading) {
          loadMorePacks();
        }
      },
      { rootMargin: '200px' }
    );

    if (scrollSentinel) {
      observer.observe(scrollSentinel);
    }
  }

  // Load more packs
  function loadMorePacks() {
    if (isLoading || !hasMorePacks) return;

    isLoading = true;
    loadingIndicator.classList.remove('hidden');

    setTimeout(() => {
      currentPage++;
      const startIndex = (currentPage - 1) * pageSize;
      const endIndex = startIndex + pageSize;
      const newPacks = filteredPacks.slice(startIndex, endIndex);

      displayedPacks = [...displayedPacks, ...newPacks];
      hasMorePacks = filteredPacks.length > displayedPacks.length;

      renderPacks();
      
      isLoading = false;
      loadingIndicator.classList.add('hidden');

      if (!hasMorePacks) {
        endMessage.classList.remove('hidden');
      }
    }, 500);
  }

  // Update filter count badge
  function updateFilterCount() {
    let count = 0;
    if (filters.searchQuery) count++;
    if (filters.venues.size > 0) count++;
    if (filters.products.size > 0) count++;
    if (filters.dateFrom !== null || filters.dateTo !== null) count++;

    if (count > 0) {
      activeFilterCountEl.textContent = count;
      activeFilterCountEl.classList.remove('hidden');
      filterStatusEl.textContent = `${count} filter${count > 1 ? 's' : ''} selected`;
    } else {
      activeFilterCountEl.classList.add('hidden');
      filterStatusEl.textContent = '0 filters selected';
    }
  }

  // Clear all filters
  function clearAllFilters() {
    filters.searchQuery = '';
    filters.venues.clear();
    filters.products.clear();
    filters.dateFrom = null;
    filters.dateTo = null;

    // Clear search
    document.getElementById('searchInput').value = '';

    // Clear checkboxes
    document.querySelectorAll('input[name="venue"]').forEach(cb => cb.checked = false);
    document.querySelectorAll('input[name="product"]').forEach(cb => cb.checked = false);
    
    // Clear inputs
    document.getElementById('dateFrom').value = '';
    document.getElementById('dateTo').value = '';

    applyFilters();
  }

  // Update URL with filter params
  function updateURL() {
    const params = new URLSearchParams();
    
    if (filters.searchQuery) {
      params.set('search', filters.searchQuery);
    }
    if (filters.venues.size > 0) {
      params.set('venues', [...filters.venues].join(','));
    }
    if (filters.products.size > 0) {
      params.set('products', [...filters.products].join(','));
    }
    if (filters.dateFrom !== null) {
      params.set('dateFrom', filters.dateFrom);
    }
    if (filters.dateTo !== null) {
      params.set('dateTo', filters.dateTo);
    }

    const newURL = params.toString() ? `${window.location.pathname}?${params}` : window.location.pathname;
    window.history.replaceState({}, '', newURL);
  }

  // Restore filters from URL
  function restoreFiltersFromURL() {
    const params = new URLSearchParams(window.location.search);
    
    // Restore search
    const search = params.get('search');
    if (search) {
      filters.searchQuery = search;
      document.getElementById('searchInput').value = search;
    }
    
    // Restore venues
    const venues = params.get('venues');
    if (venues) {
      venues.split(',').forEach(venue => {
        filters.venues.add(venue);
        const checkbox = document.querySelector(`input[name="venue"][value="${venue}"]`);
        if (checkbox) checkbox.checked = true;
      });
    }

    // Restore products
    const products = params.get('products');
    if (products) {
      products.split(',').forEach(product => {
        filters.products.add(product);
        const checkbox = document.querySelector(`input[name="product"][value="${product}"]`);
        if (checkbox) checkbox.checked = true;
      });
    }

    // Restore dates
    const dateFrom = params.get('dateFrom');
    const dateTo = params.get('dateTo');
    if (dateFrom) {
      filters.dateFrom = dateFrom;
      document.getElementById('dateFrom').value = dateFrom;
    }
    if (dateTo) {
      filters.dateTo = dateTo;
      document.getElementById('dateTo').value = dateTo;
    }

    // Apply filters if any were restored
    if (search || venues || products || dateFrom || dateTo) {
      applyFilters();
    }
  }

  // Debounce utility
  function debounce(func, wait) {
    let timeout;
    return function executedFunction(...args) {
      const later = () => {
        clearTimeout(timeout);
        func(...args);
      };
      clearTimeout(timeout);
      timeout = setTimeout(later, wait);
    };
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>

