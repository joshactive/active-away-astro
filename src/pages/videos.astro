<script define:vars={{ initialVideos: videos, metadata }}>
  // Global state
  let allVideos = [...initialVideos];
  let filteredVideos = [...initialVideos];

  // Filter state
  const filters = {
    searchQuery: '',
    categories: new Set()
  };

  // DOM elements
  const videosGrid = document.getElementById('videosGrid');
  const emptyState = document.getElementById('emptyState');
  const filteredCountEl = document.getElementById('filteredCount');
  const activeFilterCountEl = document.getElementById('activeFilterCount');
  const filterStatusEl = document.getElementById('filterStatus');
  
  // Mobile filter toggle
  const mobileFilterToggle = document.getElementById('mobileFilterToggle');
  const filtersContainer = document.getElementById('filtersContainer');
  const filterChevron = document.getElementById('filterChevron');

  // Initialize
  function init() {
    setupEventListeners();
    restoreFiltersFromURL();
    renderVideos();
    updateFilterCount();
  }

  // Setup event listeners
  function setupEventListeners() {
    // Mobile filter toggle
    mobileFilterToggle?.addEventListener('click', () => {
      filtersContainer.classList.toggle('show');
      if (filtersContainer.classList.contains('show')) {
        filterChevron.style.transform = 'rotate(180deg)';
      } else {
        filterChevron.style.transform = 'rotate(0deg)';
      }
    });

    // Filter group collapse/expand
    document.querySelectorAll('.filter-header').forEach(header => {
      header.addEventListener('click', () => {
        const filterGroup = header.parentElement;
        filterGroup.classList.toggle('collapsed');
      });
    });

    // Search input
    document.getElementById('searchInput')?.addEventListener('input', debounce((e) => {
      filters.searchQuery = e.target.value.toLowerCase().trim();
      applyFilters();
    }, 300));

    // Category checkboxes
    document.querySelectorAll('input[name="category"]').forEach(checkbox => {
      checkbox.addEventListener('change', (e) => {
        if (e.target.checked) {
          filters.categories.add(e.target.value);
        } else {
          filters.categories.delete(e.target.value);
        }
        applyFilters();
      });
    });

    // Clear filters button
    document.getElementById('clearFilters')?.addEventListener('click', clearAllFilters);
    document.getElementById('emptyStateClearBtn')?.addEventListener('click', clearAllFilters);
  }

  // Apply filters
  function applyFilters() {
    filteredVideos = allVideos.filter(video => {
      // Search filter (search in title and description)
      if (filters.searchQuery) {
        const titleMatch = video.title.toLowerCase().includes(filters.searchQuery);
        const descMatch = video.videoDescription.toLowerCase().includes(filters.searchQuery);
        if (!titleMatch && !descMatch) {
          return false;
        }
      }

      // Category filter
      if (filters.categories.size > 0 && !filters.categories.has(video.videoCategory)) {
        return false;
      }

      return true;
    });

    renderVideos();
    updateFilterCount();
    updateURL();
  }

  // Render videos
  function renderVideos() {
    const cards = videosGrid.querySelectorAll('.video-card');
    
    // Hide all cards first
    cards.forEach(card => {
      card.classList.add('hidden');
    });

    // Show filtered cards
    filteredVideos.forEach(video => {
      const card = videosGrid.querySelector(`[data-video-id="${video.id}"]`);
      if (card) {
        card.classList.remove('hidden');
      }
    });

    // Update counts
    filteredCountEl.textContent = filteredVideos.length;

    // Show/hide empty state
    if (filteredVideos.length === 0) {
      emptyState.classList.remove('hidden');
    } else {
      emptyState.classList.add('hidden');
    }
  }

  // Update filter count badge
  function updateFilterCount() {
    let count = 0;
    if (filters.searchQuery) count++;
    if (filters.categories.size > 0) count++;

    if (count > 0) {
      activeFilterCountEl.textContent = count;
      activeFilterCountEl.classList.remove('hidden');
      filterStatusEl.textContent = `${count} filter${count > 1 ? 's' : ''} selected`;
    } else {
      activeFilterCountEl.classList.add('hidden');
      filterStatusEl.textContent = '0 filters selected';
    }
  }

  // Clear all filters
  function clearAllFilters() {
    filters.searchQuery = '';
    filters.categories.clear();

    // Clear search
    document.getElementById('searchInput').value = '';

    // Clear checkboxes
    document.querySelectorAll('input[name="category"]').forEach(cb => cb.checked = false);

    applyFilters();
  }

  // Update URL with filter params
  function updateURL() {
    const params = new URLSearchParams();
    
    if (filters.searchQuery) {
      params.set('search', filters.searchQuery);
    }
    if (filters.categories.size > 0) {
      params.set('categories', [...filters.categories].join(','));
    }

    const newURL = params.toString() ? `${window.location.pathname}?${params}` : window.location.pathname;
    window.history.replaceState({}, '', newURL);
  }

  // Restore filters from URL
  function restoreFiltersFromURL() {
    const params = new URLSearchParams(window.location.search);
    
    // Restore search
    const search = params.get('search');
    if (search) {
      filters.searchQuery = search;
      document.getElementById('searchInput').value = search;
    }
    
    // Restore categories
    const categories = params.get('categories');
    if (categories) {
      categories.split(',').forEach(category => {
        filters.categories.add(category);
        const checkbox = document.querySelector(`input[name="category"][value="${category}"]`);
        if (checkbox) checkbox.checked = true;
      });
    }

    // Apply filters if any were restored
    if (search || categories) {
      applyFilters();
    }
  }

  // Debounce utility
  function debounce(func, wait) {
    let timeout;
    return function executedFunction(...args) {
      const later = () => {
        clearTimeout(timeout);
        func(...args);
      };
      clearTimeout(timeout);
      timeout = setTimeout(later, wait);
    };
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>

<script is:inline>
  // YouTube video embed on click
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.lite-youtube-video').forEach((trigger) => {
      trigger.addEventListener('click', () => {
        const videoId = trigger.getAttribute('data-video-id');
        if (!videoId) return;
        
        const iframe = document.createElement('iframe');
        iframe.setAttribute('allowfullscreen', '');
        iframe.setAttribute('loading', 'lazy');
        iframe.setAttribute('title', 'Video');
        iframe.setAttribute(
          'src',
          `https://www.youtube-nocookie.com/embed/${videoId}?autoplay=1&rel=0`
        );
        iframe.setAttribute('allow', 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture');
        iframe.style.position = 'absolute';
        iframe.style.inset = '0';
        iframe.style.width = '100%';
        iframe.style.height = '100%';
        iframe.style.border = 'none';

        const wrapper = document.createElement('div');
        wrapper.style.position = 'absolute';
        wrapper.style.inset = '0';
        wrapper.style.width = '100%';
        wrapper.style.height = '100%';
        wrapper.appendChild(iframe);

        trigger.replaceWith(wrapper);
      }, { once: true });
    });
    
    // Read More functionality for video descriptions
    const initReadMore = () => {
      const readMoreButtons = document.querySelectorAll('.read-more-btn');
      
      readMoreButtons.forEach(button => {
        // Skip if already initialized
        if (button.hasAttribute('data-initialized')) {
          return;
        }
        
        const videoId = button.getAttribute('data-video-id');
        const description = document.querySelector(`.video-description[data-video-id="${videoId}"]`);
        
        if (!description) return;
        
        // Check if text is truncated (add small buffer)
        const isTruncated = description.scrollHeight > (description.clientHeight + 2);
        
        if (isTruncated) {
          button.classList.remove('hidden');
          button.setAttribute('data-initialized', 'true');
          
          // Add click handler
          button.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            
            if (description.classList.contains('line-clamp-3')) {
              description.classList.remove('line-clamp-3');
              button.textContent = 'Read less';
            } else {
              description.classList.add('line-clamp-3');
              button.textContent = 'Read more';
            }
          });
        }
      });
    };
    
    // Run multiple times to ensure styles are loaded
    setTimeout(initReadMore, 100);
    setTimeout(initReadMore, 300);
    setTimeout(initReadMore, 500);
    
    // Also run after fonts are loaded
    if (document.fonts) {
      document.fonts.ready.then(() => {
        setTimeout(initReadMore, 100);
      });
    }
  });
</script>

