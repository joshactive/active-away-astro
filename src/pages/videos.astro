// Videos Archive Page - Shows all videos from Strapi
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';

// Fetch page content from Strapi
let pageContent = null;
try {
  const { getVideoArchivePage } = await import('../utils/strapi.js');
  pageContent = await getVideoArchivePage();
  console.log('ðŸŽ¥ [videos] Page content fetched successfully');
} catch (error) {
  console.warn('[videos] Could not fetch page content, using defaults:', error.message);
}

// Fetch SEO data separately
let seoData = null;
try {
  const { getPageSEO } = await import('../utils/strapi.js');
  seoData = await getPageSEO('video-archive-page');
  if (seoData) {
    console.log('ðŸ“„ [videos] SEO data fetched successfully');
  }
} catch (error) {
  console.warn('[videos] Could not fetch SEO data:', error.message);
}

// Fetch all videos
let videosData = { videos: [], metadata: { total: 0, videoCategories: [] } };

try {
  const { getAllVideos } = await import('../utils/strapi.js');
  videosData = await getAllVideos();
  console.log(`ðŸŽ¥ [videos] Fetched ${videosData.metadata.total} videos`);
} catch (error) {
  console.error('[videos] Error fetching videos:', error.message);
}

const { videos, metadata } = videosData;

// Extract page content with fallbacks
const heroTitle = pageContent?.hero?.title || 'Videos';
const heroSubtitle = pageContent?.hero?.subtitle || 'Watch our collection of tennis, padel, and sporting videos. Learn techniques, get inspired, and see what Active Away is all about.';
const heroKicker = pageContent?.hero?.kicker || 'VIDEOS';
const heroBackgroundImage = pageContent?.hero?.backgroundImage?.url || 'https://activeaway.com/cdn-cgi/imagedelivery/-aT8Z2F9gGvZ9fdofZcCaQ/45b69090-1c22-46cd-7f98-086ba71efc00/public';
const heroBackgroundImageAlt = pageContent?.hero?.backgroundImage?.alt || 'Active Away videos';

// Extract SEO fields with fallbacks
const pageTitle = seoData?.metaTitle || pageContent?.seo?.metaTitle || 'Videos - Active Away';
const pageDescription = seoData?.metaDescription || pageContent?.seo?.metaDescription || 'Watch our collection of tennis, padel, and sporting videos. Learn techniques, get inspired, and see what Active Away is all about.';

// Extract meta image URL properly
let metaImage = null;
if (seoData?.metaImage) {
  metaImage = typeof seoData.metaImage === 'string' ? seoData.metaImage : seoData.metaImage.url;
} else if (pageContent?.seo?.metaImage) {
  metaImage = typeof pageContent.seo.metaImage === 'string' ? pageContent.seo.metaImage : pageContent.seo.metaImage.url;
}

const metaImageAlt = seoData?.metaImageAlt || pageContent?.seo?.metaImageAlt || null;
const metaImageWidth = seoData?.metaImageWidth || pageContent?.seo?.metaImageWidth || null;
const metaImageHeight = seoData?.metaImageHeight || pageContent?.seo?.metaImageHeight || null;
const keywords = seoData?.keywords || pageContent?.seo?.keywords || null;
const canonicalURL = seoData?.canonicalURL || pageContent?.seo?.canonicalURL || 'https://activeaway.com/videos';

// Extract YouTube ID function
function extractYouTubeId(url: string) {
  if (!url) return null;
  try {
    const parsed = new URL(url);
    if (parsed.hostname.includes('youtu.be')) return parsed.pathname.replace('/', '');
    if (parsed.searchParams.has('v')) return parsed.searchParams.get('v');
    const pathSegments = parsed.pathname.split('/').filter(Boolean);
    if (pathSegments[0] === 'embed' && pathSegments[1]) return pathSegments[1];
  } catch (error) {
    console.warn('Unable to parse YouTube URL', url, error);
  }
  return null;
}
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  metaImage={metaImage}
  metaImageAlt={metaImageAlt}
  metaImageWidth={metaImageWidth}
  metaImageHeight={metaImageHeight}
  keywords={keywords}
  canonicalURL={canonicalURL}
>
