      return;
    }
    
    // Clear existing cards
    groupsGrid.innerHTML = '';
    console.log('ðŸ’¬ [whatsapp-groups] Grid cleared, creating', displayedGroups.length, 'cards');
    
    // Create cards for displayed groups
    displayedGroups.forEach((group, index) => {
      const card = createGroupCard(group);
      groupsGrid.appendChild(card);
      if (index === 0) {
        console.log('ðŸ’¬ [whatsapp-groups] First card created:', group.title);
      }
    });

    console.log('ðŸ’¬ [whatsapp-groups] Cards appended to grid');

    // Update counts
    if (filteredCountEl) {
      filteredCountEl.textContent = filteredGroups.length;
    }

    // Show/hide empty state
    if (filteredGroups.length === 0) {
      emptyState?.classList.remove('hidden');
      endMessage?.classList.add('hidden');
    } else {
      emptyState?.classList.add('hidden');
      if (!hasMoreGroups) {
        endMessage?.classList.remove('hidden');
      } else {
        endMessage?.classList.add('hidden');
      }
    }
  }

