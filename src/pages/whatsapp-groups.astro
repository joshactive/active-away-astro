---
// WhatsApp Groups Page - Password protected, shows specific product types only
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';
import { getWhatsappGroupsPageSEO } from '../utils/strapi.js';

// Fetch page content from Strapi
let pageContent = null;
let accessPassword = '';
let heroImage = null;

try {
  const { fetchAPI } = await import('../utils/strapi.js');
  const data = await fetchAPI('/whatsapp-groups-page?populate[seo]=*');
  if (data && data.data) {
    const rawData = data.data;
    
    pageContent = {
      heroTitle: rawData.heroTitle,
      heroSubtitle: rawData.heroSubtitle,
      heroKicker: rawData.heroKicker,
      accessPassword: rawData.accessPassword || 'Tennis2022',
      seo: rawData.seo
    };
    
    accessPassword = pageContent.accessPassword;
    console.log('ðŸ’¬ [whatsapp-groups] Page content fetched successfully');
  }
} catch (error) {
  console.warn('[whatsapp-groups] Could not fetch page content, using defaults:', error.message);
  accessPassword = 'Tennis2022'; // Fallback password
}

// Separate API call for hero background image
try {
  const { fetchAPI, getStrapiImageData } = await import('../utils/strapi.js');
  const imageData = await fetchAPI('/whatsapp-groups-page?fields=heroTitle&populate[heroBackgroundImage][fields][0]=url&populate[heroBackgroundImage][fields][1]=alternativeText&populate[heroBackgroundImage][fields][2]=width&populate[heroBackgroundImage][fields][3]=height');
  
  if (imageData && imageData.data && imageData.data.heroBackgroundImage) {
    console.log('ðŸ’¬ [whatsapp-groups] Image data:', imageData.data.heroBackgroundImage);
    heroImage = getStrapiImageData(imageData.data.heroBackgroundImage);
    console.log('ðŸ’¬ [whatsapp-groups] Processed hero image:', heroImage);
  }
} catch (error) {
  console.warn('[whatsapp-groups] Could not fetch hero image:', error.message);
}

// Fetch SEO data from Strapi
let seoData = null;
try {
  seoData = await getWhatsappGroupsPageSEO();
  if (seoData) {
    console.log('ðŸ“„ [whatsapp-groups] SEO data fetched successfully');
  }
} catch (error) {
  console.warn('[whatsapp-groups] Could not fetch SEO data:', error.message);
}

// Define allowed products for WhatsApp groups
const ALLOWED_PRODUCTS = [
  'Adult Hosted Tennis Holiday',
  'Adult Hosted Padel Tennis Holiday',
  'Play & Watch Event',
  'Adult Pickleball Holiday',
  'Adult Hosted Ski Holiday',
  'Family Hosted Tennis Holiday'
];

// Fetch all events with plevel=5
let whatsappGroupsData = { groups: [], metadata: { total: 0, venues: [], products: [] } };

try {
  const { fetchAPI } = await import('../utils/strapi.js');
  
  // Get today's date for filtering
  const today = new Date();
  today.setHours(0, 0, 0, 0);
  const todayISO = today.toISOString().split('T')[0];
  
  // Fetch all future events (paginated to handle up to 1000 events)
  let allEventsRaw = [];
  let page = 1;
  let hasMore = true;
  const pageSize = 100; // Fetch 100 items per page for efficiency
  
  while (hasMore && allEventsRaw.length < 1000) { // Safety limit of 1000 events
    const data = await fetchAPI(`/events?filters[dateFrom][$gte]=${todayISO}&plevel=5&sort=dateFrom:asc&pagination[page]=${page}&pagination[pageSize]=${pageSize}`);
    
    if (data && data.data && data.data.length > 0) {
      allEventsRaw = [...allEventsRaw, ...data.data];
      
      // Check if there are more pages
      const pagination = data.meta?.pagination;
      if (pagination && pagination.page < pagination.pageCount) {
        page++;
      } else {
        hasMore = false;
      }
    } else {
      hasMore = false;
    }
  }
  
  console.log(`ðŸ’¬ [whatsapp-groups] Fetched ${allEventsRaw.length} future events (from ${todayISO} onwards)`);
  
  if (allEventsRaw.length > 0) {
    // Filter for only allowed products
    const filteredEvents = allEventsRaw.filter(item => {
      const event = item;
      return ALLOWED_PRODUCTS.includes(event.product);
    });
    
    console.log(`ðŸ’¬ [whatsapp-groups] Filtered to ${filteredEvents.length} events with allowed products`);
    
    const groups = filteredEvents.map(item => {
      // In Strapi 5, data is flat (no attributes wrapper)
      const event = item;
      
      // Format dates as text
      let dateFromText = '';
      let dateUntilText = '';
      
      if (event.dateFrom) {
        const fromDate = new Date(event.dateFrom);
        dateFromText = fromDate.toLocaleDateString('en-GB', { 
          weekday: 'short', 
          day: '2-digit', 
          month: 'long', 
          year: 'numeric' 
        });
      }
      
      if (event.dateUntil) {
        const untilDate = new Date(event.dateUntil);
        dateUntilText = untilDate.toLocaleDateString('en-GB', { 
          weekday: 'short', 
          day: '2-digit', 
          month: 'long', 
          year: 'numeric' 
        });
      }
      
      return {
        id: item.id,
        title: event.title || '',
        dateFrom: event.dateFrom || '',
        dateUntil: event.dateUntil || '',
        dateFromText,
        dateUntilText,
        product: event.product || '',
        venue: event.venue_plain_text || '',
        whatsappUrl: event.whatsapp_url || '',
        uniqueValue: event.uniqueValue || ''
      };
    });
    
    // Extract unique venues (filter out empty strings)
    const venues = [...new Set(groups.map(g => g.venue).filter(Boolean))].sort();
    
    // Extract unique product types (will be subset of ALLOWED_PRODUCTS)
    const products = [...new Set(groups.map(g => g.product).filter(Boolean))].sort();
    
    whatsappGroupsData = {
      groups,
      metadata: {
        total: groups.length,
        venues,
        products
      }
    };
    
    console.log(`ðŸ’¬ [whatsapp-groups] Processed ${groups.length} WhatsApp groups`);
  }
} catch (error) {
  console.error('[whatsapp-groups] Error fetching data:', error.message);
}

const { groups, metadata } = whatsappGroupsData;

// Extract page content with fallbacks
const heroTitle = pageContent?.heroTitle || 'WhatsApp Groups';
const heroSubtitle = pageContent?.heroSubtitle || 'Join your event WhatsApp group to connect with fellow participants';
const heroKicker = pageContent?.heroKicker || 'COMMUNITY';
const heroBackgroundImage = heroImage?.url || 'https://activeaway.com/cdn-cgi/imagedelivery/-aT8Z2F9gGvZ9fdofZcCaQ/45b69090-1c22-46cd-7f98-086ba71efc00/public';
const heroBackgroundImageAlt = heroImage?.alt || 'WhatsApp groups';

// Extract SEO fields with fallbacks
const pageTitle = seoData?.metaTitle || pageContent?.seo?.metaTitle || 'WhatsApp Groups - Active Away';
const pageDescription = seoData?.metaDescription || pageContent?.seo?.metaDescription || 'Join your event WhatsApp group to connect with fellow participants.';

// Extract meta image URL properly
let metaImage = null;
if (seoData?.metaImage) {
  metaImage = typeof seoData.metaImage === 'string' ? seoData.metaImage : seoData.metaImage.url;
} else if (pageContent?.seo?.metaImage) {
  metaImage = typeof pageContent.seo.metaImage === 'string' ? pageContent.seo.metaImage : pageContent.seo.metaImage.url;
}

const metaImageAlt = seoData?.metaImageAlt || pageContent?.seo?.metaImageAlt || null;
const metaImageWidth = seoData?.metaImageWidth || pageContent?.seo?.metaImageWidth || null;
const metaImageHeight = seoData?.metaImageHeight || pageContent?.seo?.metaImageHeight || null;
const keywords = seoData?.keywords || pageContent?.seo?.keywords || null;
const canonicalURL = seoData?.canonicalURL || pageContent?.seo?.canonicalURL || 'https://activeaway.com/whatsapp-groups';
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  metaImage={metaImage}
  metaImageAlt={metaImageAlt}
  metaImageWidth={metaImageWidth}
  metaImageHeight={metaImageHeight}
  keywords={keywords}
  canonicalURL={canonicalURL}
>
  <!-- Password Modal (Shown on page load) -->
  <div id="passwordModal" class="fixed inset-0 bg-black bg-opacity-75 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl p-8 max-w-md w-full shadow-2xl">
      <div class="text-center mb-6">
        <svg class="w-16 h-16 mx-auto text-gold mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
        <h2 class="text-2xl font-playfair font-bold text-gray-900 mb-2">Password Required</h2>
        <p class="text-sm font-inter text-gray-600">Enter the password "Tennis2022" to access WhatsApp groups. This is to prevent bot access!</p>
      </div>
      
      <form id="passwordForm" class="space-y-4">
        <div>
          <input 
            type="password" 
            id="passwordInput"
            placeholder="Enter password..."
            class="w-full bg-gray-50 border border-gray-300 rounded-lg px-4 py-3 text-sm font-inter text-gray-900 focus:ring-2 focus:ring-gold focus:border-gold transition-all"
            autofocus
          />
          <p id="passwordError" class="hidden text-sm text-red-600 mt-2 font-inter">Incorrect password. Please try again.</p>
        </div>
        
        <button 
          type="submit"
          class="w-full bg-gold hover:bg-gold-700 text-white font-inter font-semibold py-3 px-4 rounded-lg transition-colors"
        >
          Unlock
        </button>
      </form>
    </div>
  </div>

  <!-- Protected Content (Hidden until password verified) -->
  <div id="protectedContent" class="hidden">
    <!-- Hero Header Section -->
    <section class="relative w-full h-[400px] sm:h-[500px] lg:h-[600px] overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-[#0D1C4E]/75 via-[#0D1C4E]/60 to-[#0D1C4E]/60 z-10"></div>
      <img 
        src={heroBackgroundImage}
        alt={heroBackgroundImageAlt}
        class="absolute inset-0 w-full h-full object-cover"
        loading="eager"
      />
      
      <div class="relative z-20 container mx-auto max-w-[1400px] px-4 sm:px-10 h-full flex flex-col justify-center items-center text-center">
        <div class="hidden sm:block text-xs sm:text-sm font-inter font-semibold text-gold tracking-[0.2em] uppercase mb-4 sm:mb-6 border-t border-b border-gold/50 py-2 px-6">
          {heroKicker}
        </div>
        <h1 class="text-4xl sm:text-5xl lg:text-7xl font-playfair font-bold text-white mb-6 sm:mb-8 leading-tight max-w-4xl">
          {heroTitle}
        </h1>
        <p class="text-lg sm:text-xl lg:text-2xl font-inter text-gray-100 max-w-3xl leading-relaxed">
          {heroSubtitle}
        </p>
      </div>
    </section>

    <!-- Main Content Section -->
    <section class="w-full bg-white py-12 sm:py-16 lg:py-24">
      <div class="container mx-auto max-w-[1400px] px-4 sm:px-10">
        <div class="flex flex-col lg:flex-row gap-8 lg:gap-12">
          
          <!-- Left Sidebar - Filters -->
          <aside class="w-full lg:w-[320px] flex-shrink-0">
            <div id="filterBar" class="bg-white border border-gray-200 rounded-2xl p-6 shadow-lg lg:sticky lg:top-4">
              <!-- Filter Header -->
              <div class="mb-6 pb-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                  <h3 class="text-base font-playfair font-semibold text-gray-900">Filters</h3>
                  <span id="activeFilterCount" class="hidden bg-gold text-white text-xs font-bold px-2.5 py-1 rounded-full">0</span>
                </div>
                <p id="filterStatus" class="text-sm font-inter text-gray-600 mt-1">0 filters selected</p>
              </div>

              <!-- Mobile Filter Toggle -->
              <button 
                id="mobileFilterToggle"
                class="lg:hidden w-full flex items-center justify-between bg-gray-50 hover:bg-gray-100 px-4 py-3 rounded-lg transition-colors mb-4"
              >
                <span class="font-inter font-medium text-gray-900">Show/Hide Filters</span>
                <svg class="w-5 h-5 text-gray-600 transition-transform" id="filterChevron" viewBox="0 0 24 24" fill="none">
                  <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>

              <!-- Filters Container -->
              <div id="filtersContainer" class="space-y-6">
                <!-- Search Filter -->
                <div class="filter-group">
                  <h4 class="text-base font-inter font-medium text-gray-900 mb-3">Search</h4>
                  <div class="relative">
                    <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    <input 
                      type="text" 
                      id="searchInput"
                      placeholder="Search by title..."
                      class="w-full bg-gray-50 border border-gray-300 rounded-lg pl-10 pr-4 py-2.5 text-sm font-inter text-gray-900 focus:ring-2 focus:ring-gold focus:border-gold transition-all"
                    />
                  </div>
                </div>

                <!-- Venue Filter -->
                <div class="filter-group">
                  <button class="filter-header w-full flex items-center justify-between py-3 text-left" data-filter="venue">
                    <span class="text-base font-inter font-medium text-gray-900">Venue</span>
                    <svg class="w-5 h-5 text-gray-600 transition-transform" viewBox="0 0 24 24" fill="none">
                      <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </button>
                  <div class="filter-content space-y-2 mt-3">
                    {metadata.venues.map(venue => (
                      <label class="flex items-center cursor-pointer group">
                        <input 
                          type="checkbox" 
                          name="venue" 
                          value={venue}
                          class="w-4 h-4 text-gold border-gray-300 rounded focus:ring-gold focus:ring-2"
                        />
                        <span class="ml-3 text-sm font-inter text-gray-700 group-hover:text-gray-900">{venue}</span>
                      </label>
                    ))}
                  </div>
                </div>

                <!-- Product Filter -->
                <div class="filter-group">
                  <button class="filter-header w-full flex items-center justify-between py-3 text-left" data-filter="product">
                    <span class="text-base font-inter font-medium text-gray-900">Product</span>
                    <svg class="w-5 h-5 text-gray-600 transition-transform" viewBox="0 0 24 24" fill="none">
                      <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </button>
                  <div class="filter-content space-y-2 mt-3">
                    {metadata.products.map(product => (
                      <label class="flex items-center cursor-pointer group">
                        <input 
                          type="checkbox" 
                          name="product" 
                          value={product}
                          class="w-4 h-4 text-gold border-gray-300 rounded focus:ring-gold focus:ring-2"
                        />
                        <span class="ml-3 text-sm font-inter text-gray-700 group-hover:text-gray-900">{product}</span>
                      </label>
                    ))}
                  </div>
                </div>

                <!-- Date Range Filter -->
                <div class="filter-group">
                  <button class="filter-header w-full flex items-center justify-between py-3 text-left" data-filter="dates">
                    <span class="text-base font-inter font-medium text-gray-900">Event Dates</span>
                    <svg class="w-5 h-5 text-gray-600 transition-transform" viewBox="0 0 24 24" fill="none">
                      <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </button>
                  <div class="filter-content mt-3">
                    <div class="space-y-2">
                      <input 
                        type="date" 
                        id="dateFrom"
                        placeholder="From"
                        class="w-full bg-gray-50 border border-gray-300 rounded-lg px-3 py-2.5 text-sm font-inter text-gray-900 focus:ring-2 focus:ring-gold focus:border-gold transition-all"
                      />
                      <input 
                        type="date" 
                        id="dateTo"
                        placeholder="To"
                        class="w-full bg-gray-50 border border-gray-300 rounded-lg px-3 py-2.5 text-sm font-inter text-gray-900 focus:ring-2 focus:ring-gold focus:border-gold transition-all"
                      />
                    </div>
                  </div>
                </div>

                <!-- Clear Filters Button -->
                <div class="pt-6">
                  <button 
                    id="clearFilters"
                    class="w-full px-4 py-2.5 text-sm font-inter font-medium text-gold hover:text-gold-700 border border-gold hover:bg-gold hover:text-white rounded-lg transition-all"
                  >
                    Clear All Filters
                  </button>
                </div>
              </div>
            </div>
          </aside>

          <!-- Right Content Area -->
          <main class="flex-1 min-w-0">
            <!-- Results Header -->
            <div class="flex items-center justify-between mb-6 pb-4 border-b border-gray-200">
              <div class="text-base sm:text-lg font-inter text-gray-900">
                Showing <span id="filteredCount" class="font-semibold">{groups.length}</span> of <span class="font-semibold">{metadata.total}</span> WhatsApp groups
              </div>
            </div>

            <!-- Groups Grid - Will be populated by JavaScript after authentication -->
            <div id="groupsGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 gap-6">
              <!-- Cards will be rendered here by JavaScript after password verification -->
            </div>

            <!-- Loading Indicator -->
            <div id="loadingIndicator" class="hidden text-center py-12">
              <div class="inline-block w-12 h-12 border-4 border-gray-300 border-t-gold rounded-full animate-spin"></div>
              <p class="mt-4 text-base font-inter text-gray-800">Loading more...</p>
            </div>

            <!-- Empty State -->
            <div id="emptyState" class="hidden text-center py-16">
              <svg class="w-24 h-24 mx-auto text-gray-300 mb-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
              <h3 class="text-xl font-playfair font-semibold text-gray-900 mb-3">No WhatsApp groups found</h3>
              <p class="text-base font-inter text-gray-800 leading-relaxed mb-6">Try adjusting your filters to see more results</p>
              <button id="emptyStateClearBtn" class="px-6 py-3 bg-gold hover:bg-gold-700 text-white font-inter font-medium rounded-full transition-all duration-300">
                Clear All Filters
              </button>
            </div>

            <!-- Infinite Scroll Sentinel -->
            <div id="scrollSentinel" class="h-4"></div>

            <!-- End of Results Message -->
            <div id="endMessage" class="hidden text-center py-12">
              <p class="text-gray-600 font-inter">You've reached the end of all WhatsApp groups</p>
            </div>
          </main>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .font-inter {
    font-family: 'Inter', sans-serif;
  }
  
  .font-playfair {
    font-family: 'Playfair Display', serif;
  }

  .group-card {
    transition: all 0.3s ease;
  }

  .group-card.hidden {
    display: none;
  }

  /* Filter Group Styles */
  .filter-group {
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .filter-group:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .filter-group + .filter-group {
    padding-top: 1.5rem;
  }

  .filter-header {
    border-bottom: 1px solid transparent;
    transition: all 0.2s ease;
  }

  .filter-header:hover {
    background-color: #f9fafb;
    border-radius: 0.5rem;
  }

  .filter-header svg {
    transition: transform 0.3s ease;
  }

  .filter-group.collapsed .filter-header svg {
    transform: rotate(-90deg);
  }

  .filter-group.collapsed .filter-content {
    display: none;
  }

  .animate-spin {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  /* Mobile filter container */
  @media (max-width: 1023px) {
    #filtersContainer {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
    }

    #filtersContainer.show {
      max-height: 2000px;
    }
  }
</style>

<script define:vars={{ initialGroups: groups, metadata, correctPassword: accessPassword }}>
  console.log('ðŸ’¬ [whatsapp-groups] Script loaded, groups:', initialGroups?.length);
  
  // Password protection
  const passwordModal = document.getElementById('passwordModal');
  const passwordForm = document.getElementById('passwordForm');
  const passwordInput = document.getElementById('passwordInput');
  const passwordError = document.getElementById('passwordError');
  const protectedContent = document.getElementById('protectedContent');

  // Check if already authenticated (session storage)
  const isAuthenticated = sessionStorage.getItem('whatsapp_auth') === 'true';
  if (isAuthenticated) {
    console.log('ðŸ’¬ [whatsapp-groups] Already authenticated, showing content');
    passwordModal.classList.add('hidden');
    protectedContent.classList.remove('hidden');
    // Initialize after a small delay to ensure DOM is ready
    setTimeout(() => init(), 100);
  }

  passwordForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    const enteredPassword = passwordInput.value;
    
    if (enteredPassword === correctPassword) {
      // Correct password
      console.log('ðŸ’¬ [whatsapp-groups] Password correct, authenticating');
      sessionStorage.setItem('whatsapp_auth', 'true');
      passwordModal.classList.add('hidden');
      protectedContent.classList.remove('hidden');
      passwordError.classList.add('hidden');
      // Initialize after a small delay to ensure DOM is ready
      setTimeout(() => init(), 100);
    } else {
      // Incorrect password
      console.log('ðŸ’¬ [whatsapp-groups] Password incorrect');
      passwordError.classList.remove('hidden');
      passwordInput.value = '';
      passwordInput.classList.add('border-red-500');
      setTimeout(() => {
        passwordInput.classList.remove('border-red-500');
      }, 2000);
    }
  });

  // Global state
  let allGroups = [...initialGroups];
  let filteredGroups = [...initialGroups];
  let displayedGroups = [...initialGroups].slice(0, 18);
  let currentPage = 1;
  const pageSize = 18;
  let isLoading = false;
  let hasMoreGroups = allGroups.length > displayedGroups.length;

  // Filter state
  const filters = {
    searchQuery: '',
    venues: new Set(),
    products: new Set(),
    dateFrom: null,
    dateTo: null
  };

  // DOM elements
  let groupsGrid, loadingIndicator, emptyState, endMessage, scrollSentinel;
  let filteredCountEl, activeFilterCountEl, filterStatusEl;
  let mobileFilterToggle, filtersContainer, filterChevron;

  // Initialize
  function init() {
    console.log('ðŸ’¬ [whatsapp-groups] Initializing, displayedGroups:', displayedGroups.length);
    
    // Get DOM elements
    groupsGrid = document.getElementById('groupsGrid');
    loadingIndicator = document.getElementById('loadingIndicator');
    emptyState = document.getElementById('emptyState');
    endMessage = document.getElementById('endMessage');
    scrollSentinel = document.getElementById('scrollSentinel');
    filteredCountEl = document.getElementById('filteredCount');
    activeFilterCountEl = document.getElementById('activeFilterCount');
    filterStatusEl = document.getElementById('filterStatus');
    mobileFilterToggle = document.getElementById('mobileFilterToggle');
    filtersContainer = document.getElementById('filtersContainer');
    filterChevron = document.getElementById('filterChevron');

    console.log('ðŸ’¬ [whatsapp-groups] groupsGrid element:', groupsGrid ? 'found' : 'NOT FOUND');

    setupEventListeners();
    setupInfiniteScroll();
    restoreFiltersFromURL();
    
    // Render initial state
    renderGroups();
    updateFilterCount();
    
    console.log('ðŸ’¬ [whatsapp-groups] Initialization complete');
  }

  // Setup event listeners
  function setupEventListeners() {
    // Mobile filter toggle
    mobileFilterToggle?.addEventListener('click', () => {
      filtersContainer.classList.toggle('show');
      if (filtersContainer.classList.contains('show')) {
        filterChevron.style.transform = 'rotate(180deg)';
      } else {
        filterChevron.style.transform = 'rotate(0deg)';
      }
    });

    // Filter group collapse/expand
    document.querySelectorAll('.filter-header').forEach(header => {
      header.addEventListener('click', () => {
        const filterGroup = header.parentElement;
        filterGroup.classList.toggle('collapsed');
      });
    });

    // Search input
    document.getElementById('searchInput')?.addEventListener('input', debounce((e) => {
      filters.searchQuery = e.target.value.toLowerCase().trim();
      applyFilters();
    }, 300));

    // Venue checkboxes
    document.querySelectorAll('input[name="venue"]').forEach(checkbox => {
      checkbox.addEventListener('change', (e) => {
        if (e.target.checked) {
          filters.venues.add(e.target.value);
        } else {
          filters.venues.delete(e.target.value);
        }
        applyFilters();
      });
    });

    // Product checkboxes
    document.querySelectorAll('input[name="product"]').forEach(checkbox => {
      checkbox.addEventListener('change', (e) => {
        if (e.target.checked) {
          filters.products.add(e.target.value);
        } else {
          filters.products.delete(e.target.value);
        }
        applyFilters();
      });
    });

    // Date range inputs
    const dateFromInput = document.getElementById('dateFrom');
    const dateToInput = document.getElementById('dateTo');
    
    dateFromInput?.addEventListener('change', (e) => {
      filters.dateFrom = e.target.value || null;
      
      // Auto-set end date to 60 days after start date
      if (filters.dateFrom && dateToInput) {
        const startDate = new Date(filters.dateFrom);
        const endDate = filters.dateTo ? new Date(filters.dateTo) : null;
        
        if (!endDate || endDate <= startDate) {
          const autoEndDate = new Date(startDate);
          autoEndDate.setDate(autoEndDate.getDate() + 60);
          const autoEndDateStr = autoEndDate.toISOString().split('T')[0];
          dateToInput.value = autoEndDateStr;
          filters.dateTo = autoEndDateStr;
        }
      }
      
      applyFilters();
    });

    dateToInput?.addEventListener('change', (e) => {
      filters.dateTo = e.target.value || null;
      applyFilters();
    });

    // Clear filters button
    document.getElementById('clearFilters')?.addEventListener('click', clearAllFilters);
    document.getElementById('emptyStateClearBtn')?.addEventListener('click', clearAllFilters);
  }

  // Apply filters
  function applyFilters() {
    filteredGroups = allGroups.filter(group => {
      // Search filter
      if (filters.searchQuery && !group.title.toLowerCase().includes(filters.searchQuery)) {
        return false;
      }

      // Venue filter
      if (filters.venues.size > 0 && !filters.venues.has(group.venue)) {
        return false;
      }

      // Product filter
      if (filters.products.size > 0 && !filters.products.has(group.product)) {
        return false;
      }

      // Date range filter
      if (filters.dateFrom || filters.dateTo) {
        const groupDate = new Date(group.dateFrom);
        if (filters.dateFrom && groupDate < new Date(filters.dateFrom)) {
          return false;
        }
        if (filters.dateTo && groupDate > new Date(filters.dateTo)) {
          return false;
        }
      }

      return true;
    });

    currentPage = 1;
    displayedGroups = filteredGroups.slice(0, pageSize);
    hasMoreGroups = filteredGroups.length > displayedGroups.length;
    
    renderGroups();
    updateFilterCount();
    updateURL();
  }

  // Render groups
  function renderGroups() {
